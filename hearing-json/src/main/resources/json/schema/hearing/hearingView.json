{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "http://justice.gov.uk/hearing/courts/hearingView.json",
  "type": "object",
  "properties": {
    "id": {
      "$ref": "http://justice.gov.uk/core/courts/courtsDefinitions.json#/definitions/uuid"
    },
    "jurisdictionType": {
      "$ref": "http://justice.gov.uk/core/courts/jurisdictionType.json"
    },
    "reportingRestrictionReason": {
      "type": "string"
    },
    "estimatedDuration": {
      "description": "Value from the Estimated Duration prompt",
      "type": "string"
    },
    "shadowListedOffences": {
      "type": "array",
      "minItems": 0,
      "items": {
        "$ref": "http://justice.gov.uk/core/courts/courtsDefinitions.json#/definitions/uuid"
      }
    },

    "defendantsWithWelshTranslationList": {
      "type": "array",
      "minItems": 0,
      "items": {
        "$ref": "http://justice.gov.uk/core/courts/defendantsWithWelshTranslation.json"
      }
    },
    "courtCentre": {
      "$ref": "http://justice.gov.uk/core/courts/courtCentre.json"
    },
    "youthCourt": {
      "$ref": "http://justice.gov.uk/core/courts/youthCourt.json"
    },
    "youthCourtDefendantIds": {
      "type": "array",
      "minItems": 0,
      "items": {
        "$ref": "http://justice.gov.uk/core/courts/courtsDefinitions.json#/definitions/uuid"
      }
    },
    "hearingLanguage": {
      "$ref": "http://justice.gov.uk/core/courts/hearingLanguage.json"
    },
    "prosecutionCases": {
      "description": "The collection of cases to be heard or the case for a linked application with respect to an application hearing",
      "type": "array",
      "minItems": 1,
      "items": {
        "$ref": "http://justice.gov.uk/core/courts/prosecutionCase.json"
      }
    },
    "defendantJudicialResults": {
      "type": "array",
      "minItems": 1,
      "items": {
        "$ref": "http://justice.gov.uk/core/courts/defendantJudicialResult.json"
      }
    },
    "hasSharedResults": {
      "description": "Indicates that the hearing has at least one result shared",
      "type": "boolean"
    },
    "courtApplications": {
      "description": "The collection of applications to be heard with respect to an application hearing or the applications for a case with respect to a hearing related to the case",
      "type": "array",
      "minItems": 0,
      "items": {
        "$ref": "#/definitions/courtApplicationView"
      }
    },
    "defendantReferralReasons": {
      "type": "array",
      "minItems": 1,
      "items": {
        "$ref": "http://justice.gov.uk/core/courts/referralReason.json"
      }
    },
    "hearingCaseNotes": {
      "type": "array",
      "minItems": 1,
      "items": {
        "$ref": "http://justice.gov.uk/core/courts/hearingCaseNote.json"
      }
    },
    "type": {
      "$ref": "http://justice.gov.uk/core/courts/hearingType.json"
    },
    "hearingDays": {
      "type": "array",
      "minItems": 1,
      "items": {
        "$ref": "http://justice.gov.uk/core/courts/hearingDay.json"
      }
    },
    "earliestNextHearingDate": {
      "type": "string",
      "format": "date-time"
    },
    "judiciary": {
      "type": "array",
      "minItems": 1,
      "items": {
        "$ref": "http://justice.gov.uk/core/courts/judicialRole.json"
      }
    },
    "applicantCounsels": {
      "type": "array",
      "minItems": 1,
      "items": {
        "$ref": "http://justice.gov.uk/core/courts/applicantCounsel.json"
      }
    },
    "respondentCounsels": {
      "type": "array",
      "minItems": 1,
      "items": {
        "$ref": "http://justice.gov.uk/core/courts/respondentCounsel.json"
      }
    },
    "prosecutionCounsels": {
      "type": "array",
      "minItems": 1,
      "items": {
        "$ref": "http://justice.gov.uk/core/courts/prosecutionCounsel.json"
      }
    },
    "defenceCounsels": {
      "type": "array",
      "minItems": 1,
      "items": {
        "$ref": "http://justice.gov.uk/core/courts/defenceCounsel.json"
      }
    },
    "applicationPartyCounsels": {
      "type": "array",
      "minItems": 1,
      "items": {
        "$ref": "http://justice.gov.uk/core/courts/courtApplicationPartyCounsel.json"
      }
    },
    "defendantAttendance": {
      "type": "array",
      "minItems": 1,
      "items": {
        "$ref": "http://justice.gov.uk/core/courts/defendantAttendance.json"
      }
    },
    "intermediaries": {
      "description": "The collection of interpreter/intermediary are available for a case with respect to a hearing related to the case.",
      "type": "array",
      "minItems": 1,
      "items": {
        "$ref": "http://justice.gov.uk/core/courts/interpreterIntermediary.json"
      }
    },
    "courtApplicationPartyAttendance": {
      "type": "array",
      "minItems": 1,
      "items": {
        "$ref": "http://justice.gov.uk/core/courts/courtApplicationPartyAttendance.json"
      }
    },
    "crackedIneffectiveTrial": {
      "$ref": "http://justice.gov.uk/core/courts/crackedIneffectiveTrial.json"
    },
    "isEffectiveTrial": {
      "description": "Identifies a hearing as an effective trial",
      "type": "boolean"
    },
    "isBoxHearing": {
      "description": "Identifies a hearing as a box hearing",
      "type": "boolean"
    },
    "companyRepresentatives": {
      "type": "array",
      "minItems": 1,
      "items": {
        "$ref": "http://justice.gov.uk/core/courts/companyRepresentative.json"
      }
    },
    "isVacatedTrial": {
      "type": "boolean"
    },
    "approvalsRequested": {
      "type": "array",
      "minItems": 1,
      "items": {
        "$ref": "http://justice.gov.uk/core/courts/approvalRequest.json"
      }
    },
    "seedingHearing" : {
      "$ref": "http://justice.gov.uk/core/courts/seedingHearing.json"
    },
    "isVirtualBoxHearing": {
      "description": "Identifies a hearing as a virtual box hearing",
      "type": "boolean"
    },
    "isSJPHearing": {
      "description": "Identifies a hearing as a SJP hearing",
      "type": "boolean"
    },
    "numberOfGroupCases": {
      "description": "The number of group cases",
      "type": "integer"
    },
    "panel": {
      "description": "it can be Adult/Youth ",
      "type": "string"
    },
    "bookingType": {
      "description": "A choice of in-court, or video conference options",
      "type": "string"
    },
    "priority": {
      "description": "Priority marking on hearings/cases",
      "type": "string"
    },
    "specialRequirements": {
      "description": "Special requirements on hearings/cases",
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "string"
      }
    },
    "isGroupProceedings": {
      "description": "The hearing is a logical grouping of cases when it is true",
      "type": "boolean"
    },
    "splitMergeTags": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "string"
      }
    }
  },
  "required": [
    "id",
    "jurisdictionType",
    "courtCentre"
  ],
  "additionalProperties": false,
  "definitions": {
    "courtApplicationView": {
      "id": "http://justice.gov.uk/hearing/courts/hearingView.json#/definitions/courtApplicationView",
      "type": "object",
      "properties": {
        "id": {
          "$ref": "http://justice.gov.uk/core/courts/courtsDefinitions.json#/definitions/uuid"
        },
        "courtApplicationCases": {
          "description": "The cases that are linked to this application",
          "type": "array",
          "minItems": 0,
          "items": {
            "$ref": "http://justice.gov.uk/core/courts/courtApplicationCase.json"
          }
        },
        "hearingIdToBeVacated": {
          "$ref": "http://justice.gov.uk/core/courts/courtsDefinitions.json#/definitions/uuid"
        },
        "parentApplicationId": {
          "description": "The identifier of the linked parent application.  Linked applications are a single level deep",
          "$ref": "http://justice.gov.uk/core/courts/courtsDefinitions.json#/definitions/uuid"
        },
        "courtOrder": {
          "description": "When the application is in relation to a court order e.g. breach proceedings, the details of the court order",
          "$ref": "http://justice.gov.uk/core/courts/courtOrder.json"
        },
        "type": {
          "description": "The type of application made to court for judicial decision.  Taken from reference data",
          "$ref": "http://justice.gov.uk/core/courts/courtApplicationType.json"
        },
        "applicationReceivedDate": {
          "description": "The date that the application was received by HMCTS",
          "$ref": "http://justice.gov.uk/core/courts/courtsDefinitions.json#/definitions/datePattern"
        },
        "applicationExternalCreatorType": {
          "description": "Describes the generic role of the creator of the application in the HMCTS process (Prosecutor)",
          "$ref": "http://justice.gov.uk/core/courts/courtsDefinitions.json#/definitions/applicationExternalCreatorType"
        },
        "allegationOrComplaintStartDate": {
          "description": "The date that the allegation or complaint is alleged to have started",
          "$ref": "http://justice.gov.uk/core/courts/courtsDefinitions.json#/definitions/datePattern"
        },
        "allegationOrComplaintEndDate": {
          "description": "The date that the allegation or complaint is alleged to have ended",
          "$ref": "http://justice.gov.uk/core/courts/courtsDefinitions.json#/definitions/datePattern"
        },
        "applicationReference": {
          "description": "The human readable reference for the application.  For linked applications this will be the case urn or the prosecution authority reference suffixed with a numerical sequence.  This is generated by the backend APIs and therefore is set optional, however a reference is required by the time the application is listed",
          "type": "string"
        },
        "applicant": {
          "description": "The party applying to court to make a judicial decision on a matter",
          "$ref": "http://justice.gov.uk/core/courts/courtApplicationParty.json"
        },
        "respondents": {
          "description": "The parties answering to a matter before the court",
          "type": "array",
          "minItems": 1,
          "items": {
            "$ref": "http://justice.gov.uk/core/courts/courtApplicationParty.json"
          }
        },
        "thirdParties": {
          "description": "The 3rd parties assocaited to the court matter.  Required to be notified",
          "type": "array",
          "minItems": 1,
          "items": {
            "$ref": "http://justice.gov.uk/core/courts/courtApplicationParty.json"
          }
        },
        "subject": {
          "description": "The party that is the subject of teh application.  The subject is also a respondent or an applicant and is the subject of any orders and directions that are made during court proceedings",
          "$ref": "http://justice.gov.uk/core/courts/courtApplicationParty.json"
        },
        "applicationParticulars": {
          "description": "The particulars of the application when not covered by the associated document",
          "type": "string"
        },
        "courtApplicationPayment": {
          "description": "The details of payment or fee exemption for the application",
          "$ref": "http://justice.gov.uk/core/courts/courtApplicationPayment.json"
        },
        "applicationDecisionSoughtByDate": {
          "description": "The date by which a judicial decision is sought",
          "$ref": "http://justice.gov.uk/core/courts/courtsDefinitions.json#/definitions/datePattern"
        },
        "applicationStatus": {
          "description": "Indicates if the application is draft, listed or finalised",
          "$ref": "http://justice.gov.uk/core/courts/courtsDefinitions.json#/definitions/courtApplicationStatus"
        },
        "outOfTimeReasons": {
          "description": "The rationale for seeking a judicial decision when the regulatory timeline has surpassed.  This only applies to application types that are time constrained i.e. isTimeRestricted == true",
          "type": "string"
        },
        "defendantASN": {
          "description": "When the application is for breach proceedings the ASN for the breach proceedings is required by Bichard 7 and therefore is captured as part of the application.  The ASN applies to the subject of the application",
          "type": "string"
        },
        "judicialResults": {
          "type": "array",
          "minItems": 1,
          "items": {
            "$ref": "http://justice.gov.uk/core/courts/judicialResult.json"
          }
        },
        "plea": {
          "$ref": "http://justice.gov.uk/core/courts/plea.json"
        },
        "verdict": {
          "$ref": "http://justice.gov.uk/core/courts/verdict.json"
        },
        "hasSummonsSupplied": {
          "type": "boolean"
        },
        "removalReason": {
          "type": "string"
        },
        "commissionerOfOath": {
          "type": "boolean"
        },
        "convictionDate": {
          "$ref": "http://justice.gov.uk/core/courts/courtsDefinitions.json#/definitions/datePattern"
        },
        "futureSummonsHearing": {
          "$ref": "http://justice.gov.uk/core/courts/futureSummonsHearing.json"
        },
        "courtCivilApplication": {
          "description": "court civil application",
          "$ref": "http://justice.gov.uk/core/courts/courtCivilApplication.json"
        },
        "isGroupCaseApplication": {
          "type": "boolean"
        },
        "proceedingsConcluded": {
          "type": "boolean"
        },
        "isAmendmentAllowed": {
          "type": "boolean"
        },
        "applicationResultCodeForLaa": {
          "type": "string"
        }
      },
      "required": [
        "id",
        "type",
        "applicationReceivedDate",
        "applicant",
        "subject",
        "applicationStatus"
      ],
      "additionalProperties": false
    }
  }
}