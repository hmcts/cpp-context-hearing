rule "Query - API - hearing.get.hearings"
  when
    $outcome: Outcome();
    $action: Action(name == "hearing.get.hearings");
    eval(userAndGroupProvider.isMemberOfAnyOfTheSuppliedGroups($action,"Listing Officers", "Court Clerks", "Legal Advisers", "Judiciary", "Court Associate", "Deputies", "DJMC", "Judge", "CPS", "Non CPS Prosecutors", "Advocates", "Defence Users"));
  then
    $outcome.setSuccess(true);
end

