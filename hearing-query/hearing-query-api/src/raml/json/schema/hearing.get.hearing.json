{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "http://justice.gov.uk/json/schemas/hearing/hearing.get.hearing.json",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "hearing": {
      "$ref": "#/definitions/hearing"
    }
  },
  "required": [
    "hearing"
  ],
  "definitions": {
    "resultLine": {
      "type": "object",
      "properties": {
        "delegatedPowers": {
          "$ref": "global/delegatedPowers.json#"
        },
        "orderedDate": {
          "$ref": "global/courtsDefinitions.json#/definitions/datePattern"
        },
        "sharedDate": {
          "$ref": "global/courtsDefinitions.json#/definitions/datePattern"
        },
        "resultLineId": {
          "$ref": "global/courtsDefinitions.json#/definitions/uuid"
        },
        "resultDefinitionId": {
          "description": "Available when the UI has resolved the result with the notepad parsing service i.e. is expected when result line isComplete is true",
          "$ref": "global/courtsDefinitions.json#/definitions/uuid"
        },
        "level": {
          "description": "Available when the UI has resolved the result with the notepad parsing service i.e. is expected when result line isComplete is true",
          "type": "string",
          "enum": [
            "DEFENDANT",
            "CASE",
            "OFFENCE"
          ]
        },
        "resultLabel": {
          "description": "Available when the UI has resolved the result with the notepad parsing service i.e. is expected when result line isComplete is true",
          "type": "string"
        },
        "prompts": {
          "description": "Available when the UI has resolved the result with the notepad parsing service i.e. is expected when result line isComplete is true",
          "type": "array",
          "additionalItems": false,
          "items": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
              "id": {
                "$ref": "global/courtsDefinitions.json#/definitions/uuid"
              },
              "label": {
                "type": "string"
              },
              "fixedListCode": {
                "type": "string"
              },
              "value": {
                "type": "string"
              },
              "welshValue": {
                "type": "string"
              }
            },
            "required": [
              "id",
              "label",
              "value"
            ]
          }
        },
        "isModified": {
          "type": "boolean"
        },
        "isComplete": {
          "type": "boolean"
        }
      },
      "required": [
        "orderedDate",
        "resultLineId",
        "isModified",
        "isComplete"
      ]
    },
    "target": {
      "type": "object",
      "properties": {
        "hearingId": {
          "$ref": "global/courtsDefinitions.json#/definitions/uuid"
        },
        "resultLines": {
          "type": "array",
          "minItems": 1,
          "items": {
            "$ref": "#/definitions/resultLine"
          }
        },
        "defendantId": {
          "$ref": "global/courtsDefinitions.json#/definitions/uuid"
        },
        "targetId": {
          "$ref": "global/courtsDefinitions.json#/definitions/uuid"
        },
        "offenceId": {
          "$ref": "global/courtsDefinitions.json#/definitions/uuid"
        },
        "draftResult": {
          "type": "string"
        }
      },
      "required": [
        "hearingId",
        "resultLines",
        "targetId",
        "defendantId",
        "offenceId",
        "draftResult"
      ]
    },
    "hearing": {
      "type": "object",
      "properties": {
        "id": {
          "$ref": "global/courtsDefinitions.json#/definitions/uuid"
        },
        "type": {
          "$ref": "global/hearingType.json#"
        },
        "jurisdictionType": {
          "$ref": "global/courtsDefinitions.json#/definitions/jurisdictionType"
        },
        "reportingRestrictionReason": {
          "type": "string"
        },
        "hearingLanguage": {
          "$ref": "global/courtsDefinitions.json#/definitions/hearingLanguage"
        },
        "hearingDays": {
          "type": "array",
          "minItems": 1,
          "items": {
            "$ref": "global/hearingDay.json#"
          }
        },
        "courtCentre": {
          "$ref": "global/courtCentre.json#"
        },
        "judiciary": {
          "type": "array",
          "minItems": 1,
          "items": {
            "$ref": "global/judicialRole.json#"
          }
        },
        "prosecutionCases": {
          "type": "array",
          "minItems": 1,
          "items": {
            "$ref": "global/prosecutionCase.json#"
          }
        },
        "hasSharedResults": {
          "description": "Indicates that the hearing has at least one result shared",
          "type": "boolean"
        },
        "defendantReferralReasons": {
          "type": "array",
          "minItems": 1,
          "items": {
            "$ref": "global/referralReason.json#"
          }
        },
        "prosecutionCounsels": {
          "type": "array",
          "minItems": 1,
          "items": {
            "$ref": "global/prosecutionCounsel.json#"
          }
        },
        "defenceCounsels": {
          "type": "array",
          "minItems": 1,
          "items": {
            "$ref": "global/defenceCounsel.json#"
          }
        },
        "defendantAttendance": {
          "type": "array",
          "minItems": 1,
          "items": {
            "$ref": "global/defendantAttendance.json#"
          }
        },
        "targets": {
          "type": "array",
          "minItems": 1,
          "items": {
            "$ref": "#/definitions/target"
          }
        },
        "hearingCaseNotes": {
          "type": "array",
          "minItems": 1,
          "items": {
            "$ref": "global/hearingCaseNote.json#"
          }
        }
      },
      "required": [
        "id",
        "type",
        "jurisdictionType",
        "prosecutionCases",
        "judiciary",
        "hearingDays",
        "courtCentre"
      ],
      "additionalProperties": false
    }
  }
}