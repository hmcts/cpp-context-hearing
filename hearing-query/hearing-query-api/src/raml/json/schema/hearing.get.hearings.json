{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "http://justice.gov.uk/hearing/courts/get-hearings.json",
  "type": "object",
  "properties": {
    "hearingSummaries": {
      "type": "array",
      "minItems": 1,
      "items": {
        "$ref": "#/definitions/hearingSummary"
      }
    }
  },
  "additionalProperties": false,
  "definitions": {
    "hearingSummary": {
      "type": "object",
      "properties": {
        "id": {
          "$ref": "http://justice.gov.uk/domain/core/common/definitions.json#/definitions/uuid"
        },
        "type": {
          "$ref": "http://justice.gov.uk/core/courts/hearingType.json"
        },
        "hasSharedResults": {
          "type": "boolean"
        },
        "hearingDays": {
          "type": "array",
          "minItems": 1,
          "items": {
            "$ref": "http://justice.gov.uk/core/courts/hearingDay.json"
          }
        },
        "hearingLanguage": {
          "$ref": "http://justice.gov.uk/core/courts/hearingLanguage.json"
        },
        "jurisdictionType": {
          "$ref": "http://justice.gov.uk/core/courts/jurisdictionType.json"
        },
        "courtApplicationSummaries": {
          "type": "array",
          "minItems": 1,
          "items": {
            "$ref": "#/definitions/courtApplicationSummary"
          }
        },
        "prosecutionCaseSummaries": {
          "type": "array",
          "minItems": 1,
          "items": {
            "$ref": "#/definitions/prosecutionCaseSummary"
          }
        },
        "isGroupProceedings": {
          "description": "The hearing is a logical grouping of cases when it is true",
          "type": "boolean"
        },
        "numberOfGroupCases": {
          "type": "integer"
        },
        "courtCentre": {
          "$ref": "http://justice.gov.uk/core/courts/courtCentre.json"
        }
      }
    },
    "prosecutionCaseSummary": {
      "type": "object",
      "properties": {
        "id": {
          "$ref": "http://justice.gov.uk/domain/core/common/definitions.json#/definitions/uuid"
        },
        "prosecutionCaseIdentifier": {
          "$ref": "http://justice.gov.uk/core/courts/prosecutionCaseIdentifier.json"
        },
        "isCivil": {
          "type": "boolean"
        },
        "groupId": {
          "$ref": "http://justice.gov.uk/core/courts/courtsDefinitions.json#/definitions/uuid"
        },
        "isGroupMember": {
          "type": "boolean"
        },
        "isGroupMaster": {
          "type": "boolean"
        },
        "defendants": {
          "type": "array",
          "minItems": 1,
          "items": {
            "$ref": "#/definitions/defendant"
          }
        }
      }
    },
    "defendant": {
      "allOf": [
        {
          "properties": {
            "id": {
              "$ref": "http://justice.gov.uk/domain/core/common/definitions.json#/definitions/uuid"
            },
            "masterDefendantId": {
              "$ref": "http://justice.gov.uk/domain/core/common/definitions.json#/definitions/uuid"
            },
            "courtProceedingsInitiated": {
              "type": "string",
              "format": "date-time"
            },
            "synonym": {
              "type": "string"
            }
          }
        },
        {
          "$ref": "#/definitions/personOrganisationDetails"
        }
      ]
    },
    "courtApplicationSummary": {
      "type": "object",
      "properties": {
        "id": {
          "$ref": "http://justice.gov.uk/domain/core/common/definitions.json#/definitions/uuid"
        },
        "applicationReference": {
          "type": "string"
        },
        "caseSummaries": {
          "type": "array",
          "minItems": 1,
          "items": {
            "$ref": "#/definitions/courtApplicationCaseSummary"
          }
        },
        "applicant": {
          "$ref": "#/definitions/courtApplicationPartySummary"
        },
        "respondents": {
          "type": "array",
          "minItems": 1,
          "items": {
            "$ref": "#/definitions/courtApplicationPartySummary"
          }
        },
        "subject": {
          "$ref": "#/definitions/courtApplicationPartySummary"
        },
        "type": {
          "description": "The type of application made to court for judicial decision.  Taken from reference data",
          "type": "object",
          "properties": {
            "type": {
              "description": "The CJS Title for the court application type",
              "type": "string"
            },
            "typeWelsh": {
              "type": "string"
            },
            "legislation": {
              "type": "string"
            }
          }
        }
      }
    },
    "courtApplicationPartySummary": {
      "type": "object",
      "properties": {
        "id": {
          "$ref": "http://justice.gov.uk/domain/core/common/definitions.json#/definitions/uuid"
        },
        "firstName": {
          "description": "The person forename",
          "type": "string"
        },
        "middleName": {
          "description": "The person middle name",
          "type": "string"
        },
        "lastName": {
          "description": "The person last name",
          "type": "string"
        },
        "organisationName": {
          "description": "The organisation name",
          "type": "string"
        }
      }
    },
    "courtApplicationCaseSummary": {
      "type": "object",
      "properties": {
        "id": {
          "$ref": "http://justice.gov.uk/domain/core/common/definitions.json#/definitions/uuid"
        },
        "prosecutionCaseIdentifier": {
          "$ref": "http://justice.gov.uk/core/courts/prosecutionCaseIdentifier.json"
        }
      }
    },
    "personOrganisationDetails": {
      "type": "object",
      "properties": {
        "firstName": {
          "description": "The person forename",
          "type": "string"
        },
        "middleName": {
          "description": "The person middle name",
          "type": "string"
        },
        "lastName": {
          "description": "The person last name",
          "type": "string"
        },
        "organisationName": {
          "description": "The organisation name",
          "type": "string"
        }
      }
    }
  }
}