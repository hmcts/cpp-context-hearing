{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "http://justice.gov.uk/hearing/courts/get-hearings.json",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "hearings": {
      "type": "array",
      "minItems": 1,
      "items": {
        "$ref": "#/definitions/hearing"
      }
    }
  },
  "required": [
    "hearings"
  ],
  "definitions": {
    "hearing": {
      "type": "object",
      "properties": {
        "id": {
          "$ref": "http://justice.gov.uk/core/courts/courtsDefinitions.json#/definitions/uuid"
        },
        "type": {
          "$ref": "http://justice.gov.uk/core/courts/hearingType.json"
        },
        "jurisdictionType": {
          "$ref": "http://justice.gov.uk/core/courts/courtsDefinitions.json#/definitions/jurisdictionType"
        },
        "reportingRestrictionReason": {
          "type": "string"
        },
        "hearingLanguage": {
          "type": "string"
        },
        "hearingDays": {
          "type": "array",
          "minItems": 1,
          "items": {
            "$ref": "http://justice.gov.uk/core/courts/hearingDay.json"
          }
        },
        "prosecutionCases": {
          "type": "array",
          "minItems": 1,
          "items": {
            "$ref": "#/definitions/prosecutionCase"
          }
        },
        "hasSharedResults": {
          "description": "Indicates that the hearing has at least one result shared",
          "type": "boolean"
        }
      },
      "required": [
        "id",
        "type",
        "jurisdictionType",
        "prosecutionCases"
      ],
      "additionalProperties": false
    },
    "prosecutionCase": {
      "type": "object",
      "properties": {
        "id": {
          "$ref": "http://justice.gov.uk/core/courts/courtsDefinitions.json#/definitions/uuid"
        },
        "prosecutionCaseIdentifier": {
          "$ref": "http://justice.gov.uk/core/courts/prosecutionCaseIdentifier.json"
        },
        "defendants": {
          "type": "array",
          "minItems": 1,
          "items": {
            "$ref": "#/definitions/defendant"
          }
        }
      },
      "required": [
        "id",
        "prosecutionCaseIdentifier",
        "defendants"
      ],
      "additionalProperties": false
    },
    "defendant": {
      "type": "object",
      "description": "The defendant for an individual prosecution case.  Defendant details are NOT associated to multiple prosecution cases.  HMCTS business does not have authority to merge defendant details or recognise a single view of defendant",
      "properties": {
        "id": {
          "$ref": "http://justice.gov.uk/core/courts/courtsDefinitions.json#/definitions/uuid"
        },
        "name": {
          "description": "The formatted name of the defendant.  If the defendant is a person, this will be firstName || middleName || lastName. If the defendant is a legal entity, this will be organisation.Name",
          "type": "string"
        }
      },
      "required": [
        "id",
        "name"
      ],
      "additionalProperties": false
    }
  }
}