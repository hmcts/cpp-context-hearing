{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "http://justice.gov.uk/hearing/courts/hearing.share-results-v2.json",
  "type": "object",
  "properties": {
    "resultLines": {
      "type": "array",
      "minItems": 1,
      "items": {
        "$ref": "#/definitions/resultLineV2"
      }
    }
  },
  "required": [
    "resultLines"
  ],
  "definitions": {
    "resultLineV2": {
      "id": "http://justice.gov.uk/hearing/courts/hearing.share-results-v2.json",
      "type": "object",
      "properties": {
        "shortCode": {
          "type": "string"
        },
        "delegatedPowers": {
          "$ref": "http://justice.gov.uk/core/courts/delegatedPowers.json"
        },
        "orderedDate": {
          "$ref": "http://justice.gov.uk/core/courts/courtsDefinitions.json#/definitions/datePattern"
        },
        "sharedDate": {
          "$ref": "http://justice.gov.uk/core/courts/courtsDefinitions.json#/definitions/datePattern"
        },
        "resultLineId": {
          "$ref": "http://justice.gov.uk/core/courts/courtsDefinitions.json#/definitions/uuid"
        },
        "offenceId": {
          "$ref": "http://justice.gov.uk/core/courts/courtsDefinitions.json#/definitions/uuid"
        },
        "defendantId": {
          "$ref": "http://justice.gov.uk/core/courts/courtsDefinitions.json#/definitions/uuid"
        },
        "resultDefinitionId": {
          "description": "Available when the UI has resolved the result with the notepad parsing service i.e. is expected when result line isComplete is true",
          "$ref": "http://justice.gov.uk/core/courts/courtsDefinitions.json#/definitions/uuid"
        },
        "level": {
          "description": "Available when the UI has resolved the result with the notepad parsing service i.e. is expected when result line isComplete is true",
          "type": "string",
          "enum": [
            "DEFENDANT",
            "CASE",
            "OFFENCE"
          ]
        },
        "resultLabel": {
          "description": "Available when the UI has resolved the result with the notepad parsing service i.e. is expected when result line isComplete is true",
          "type": "string"
        },
        "prompts": {
          "description": "Available when the UI has resolved the result with the notepad parsing service i.e. is expected when result line isComplete is true",
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "id": {
                "$ref": "http://justice.gov.uk/domain/core/common/definitions.json#/definitions/uuid"
              },
              "promptRef" : {
                "type": "string"
              },
              "label": {
                "type": "string"
              },
              "fixedListCode": {
                "type": "string"
              },
              "value": {
                "type": "string"
              },
              "welshValue": {
                "type": "string"
              }
            },
            "required": [
              "id",
              "label",
              "value"
            ],
            "additionalProperties": false
          }
        },
        "isModified": {
          "type": "boolean"
        },
        "isComplete": {
          "type": "boolean"
        },
        "shadowListed" : {
          "type": "boolean"
        },
        "draftResult": {
          "type": "string"
        },
        "applicationId": {
          "$ref": "http://justice.gov.uk/core/courts/courtsDefinitions.json#/definitions/uuid"
        },
        "amendmentDate": {
          "description": "Indicates if the result is amended and the date of amendment",
          "type": "string",
          "format": "date-time"
        },
        "amendmentReasonId": {
          "description": "Reference data for result amendment reason Id",
          "$ref": "http://justice.gov.uk/core/courts/courtsDefinitions.json#/definitions/uuid"
        },
        "amendmentReason": {
          "description": "Reference data for result amendment reason",
          "type": "string"
        },
        "fourEyesApproval": {
          "$ref": "http://justice.gov.uk/core/courts/delegatedPowers.json"
        },
        "approvedDate": {
          "description": "Indicates if the result is amended and the date of amendment",
          "$ref": "http://justice.gov.uk/core/courts/courtsDefinitions.json#/definitions/datePattern"
        },
        "isDeleted": {
          "description": "Indicates that the result amendment was a delete",
          "type": "boolean"
        },
        "applicationOutcome": {
          "type": "object",
          "items": {
            "$ref": "http://justice.gov.uk/core/courts/courtApplicationOutcome.json"
          }
        },
        "childResultLineIds": {
          "type": "array",
          "items": {
            "$ref": "http://justice.gov.uk/core/courts/courtsDefinitions.json#/definitions/uuid"
          }
        },
        "parentResultLineIds": {
          "type": "array",
          "items": {
            "$ref": "http://justice.gov.uk/core/courts/courtsDefinitions.json#/definitions/uuid"
          }
        }
      },
      "required": [
        "orderedDate",
        "resultLineId",
        "isModified",
        "isComplete"
      ]
    }
  }
}
