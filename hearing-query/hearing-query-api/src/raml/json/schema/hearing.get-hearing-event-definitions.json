{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "http://justice.gov.uk/json/schemas/hearing/hearing.get-hearing-event-definitions.json",
  "type": "object",
  "properties": {
    "eventDefinitions": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "groupLabel": {
            "type": "string"
          },
          "actionLabel": {
            "type": "string"
          },
          "actionLabelExtension": {
            "type": "string"
          },
          "recordedLabel": {
            "type": "string"
          },
          "caseAttributes": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "alterable": {
            "type": "boolean"
          },
          "sequence": {
            "type": "object",
            "properties": {
              "type": {
                "type": "string"
              },
              "id": {
                "type": "integer"
              }
            },
            "required": [
              "type",
              "id"
            ],
            "additionalProperties": false
          }
        },
        "additionalProperties": false,
        "required": [
          "id",
          "recordedLabel",
          "actionLabel",
          "alterable"
        ]
      }
    }
  },
  "required": [
    "eventDefinitions"
  ],
  "additionalProperties": false
}
