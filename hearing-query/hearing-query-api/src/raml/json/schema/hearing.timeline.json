{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "http://justice.gov.uk/json/schemas/hearing/hearing.timeline.json",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "hearingSummaries": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/hearingSummary"
      }
    }
  },
  "definitions": {
    "hearingSummary": {
      "type": "object",
      "properties": {
        "hearingId": {
          "$ref": "http://justice.gov.uk/core/courts/courtsDefinitions.json#/definitions/uuid"
        },
        "hearingDate": {
          "type": "string"
        },
        "hearingType": {
          "type": "string"
        },
        "courtHouse": {
          "type": "string"
        },
        "courtRoom": {
          "type": "string"
        },
        "hearingTime": {
          "type": "string"
        },
        "startTime": {
          "type": "string"
        },
        "estimatedDuration": {
          "type": "integer"
        },
        "defendants": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "applicants": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "outcome": {
          "type": "string"
        },
        "isBoxHearing": {
          "type": "boolean"
        }
      }
    }
  }
}