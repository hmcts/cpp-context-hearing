{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "http://justice.gov.uk/json/schemas/hearing/hearing.timeline.json",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "hearingSummaries": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/hearingSummary"
      }
    }
  },
  "definitions": {
    "hearingSummary": {
      "type": "object",
      "properties": {
        "hearingId": {
          "$ref": "http://justice.gov.uk/core/courts/courtsDefinitions.json#/definitions/uuid"
        },
        "hearingDate": {
          "type": "string"
        },
        "hearingType": {
          "type": "string"
        },
        "courtHouse": {
          "type": "string"
        },
        "courtRoom": {
          "type": "string"
        },
        "hearingTime": {
          "type": "string"
        },
        "startTime": {
          "type": "string"
        },
        "estimatedDuration": {
          "type": "integer"
        },
        "defendants": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/person"
          }
        },
        "applicants": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "applications": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/application"
          }
        },
        "outcome": {
          "type": "string"
        },
        "isBoxHearing": {
          "type": "boolean"
        }
      }
    },
    "person" : {
      "type": "object",
      "properties": {
        "id": {
          "$ref": "http://justice.gov.uk/domain/core/common/definitions.json#/definitions/uuid"
        },
        "name": {
          "type": "string"
        },
        "masterDefendantId": {
          "$ref": "http://justice.gov.uk/domain/core/common/definitions.json#/definitions/uuid"
        }
      }
    },
    "application" : {
      "type": "object",
      "properties": {
        "applicationId": {
          "$ref": "http://justice.gov.uk/domain/core/common/definitions.json#/definitions/uuid"
        },
        "applicants": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/person"
          }
        },
        "respondents": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/person"
          }
        },
        "subjects": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/person"
          }
        }
      }
    }
  }
}