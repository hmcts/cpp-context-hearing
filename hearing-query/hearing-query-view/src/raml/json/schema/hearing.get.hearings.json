{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "http://justice.gov.uk/json/schemas/hearing/hearing.get.hearings.json",
  "type": "object",
  "properties": {
    "hearingSummaries": {
      "type": "array",
      "minItems": 1,
      "items": {
        "$ref": "#/definitions/hearingSummary"
      }
    }
  },
  "additionalProperties": false,
  "definitions": {
    "hearingSummary": {
      "type": "object",
      "properties": {
        "id": {
          "$ref": "http://justice.gov.uk/domain/core/common/definitions.json#/definitions/uuid"
        },
        "type": {
          "$ref": "http://justice.gov.uk/core/courts/hearingType.json"
        },
        "hasSharedResults": {
          "type": "boolean"
        },
        "hearingDays": {
          "type": "array",
          "minItems": 1,
          "items": {
            "$ref": "http://justice.gov.uk/core/courts/hearingDay.json"
          }
        },
        "hearingLanguage": {
          "$ref": "http://justice.gov.uk/core/courts/courtsDefinitions.json#/definitions/hearingLanguage"
        },
        "jurisdictionType": {
          "$ref": "http://justice.gov.uk/core/courts/courtsDefinitions.json#/definitions/jurisdictionType"
        },
        "courtApplicationSummaries": {
          "type": "array",
          "minItems": 1,
          "items": {
            "$ref": "#/definitions/courtApplicationSummary"
          }
        },
        "prosecutionCaseSummaries": {
          "type": "array",
          "minItems": 1,
          "items": {
            "$ref": "#/definitions/prosecutionCaseSummary"
          }
        },
        "courtCentre": {
          "$ref": "http://justice.gov.uk/core/courts/courtCentre.json"
        }
      }
    },
    "prosecutionCaseSummary": {
      "type": "object",
      "properties": {
        "id": {
          "$ref": "http://justice.gov.uk/domain/core/common/definitions.json#/definitions/uuid"
        },
        "prosecutionCaseIdentifier": {
          "$ref": "http://justice.gov.uk/core/courts/prosecutionCaseIdentifier.json"
        },
        "defendants": {
          "type": "array",
          "minItems": 1,
          "items": {
            "$ref": "#/definitions/defendant"
          }
        }
      }
    },
    "defendant": {
        "allOf": [
          {
            "properties": {
              "id": {
                "$ref": "http://justice.gov.uk/domain/core/common/definitions.json#/definitions/uuid"
              },
              "masterDefendantId": {
                "$ref": "http://justice.gov.uk/domain/core/common/definitions.json#/definitions/uuid"
              },
              "courtProceedingsInitiated": {
                "type": "string",
                "format": "date-time"
              },
              "synonym": {
                "type": "string"
              }
          }
          },
          {"$ref": "#/definitions/personOrganisationDetails"}
        ]
    },
    "courtApplicationSummary": {
      "type": "object",
      "properties": {
        "id": {
          "$ref": "http://justice.gov.uk/domain/core/common/definitions.json#/definitions/uuid"
        },
        "applicationReference": {
          "type": "string"
        },
        "applicant": {
          "allOf": [
            {
              "properties": {
                "id": {
                  "$ref": "http://justice.gov.uk/domain/core/common/definitions.json#/definitions/uuid"
                },
                "synonym": {
                  "type": "string"
                }
              }
            },
            {"$ref": "#/definitions/personOrganisationDetails"}
          ]
        },
        "respondents": {
          "type": "array",
          "minItems": 1,
          "items": {
            "$ref": "#/definitions/respondent"
          }
        }
      }
    },
    "respondent": {
      "allOf": [
        {
          "properties": {
            "id": {
              "$ref": "http://justice.gov.uk/domain/core/common/definitions.json#/definitions/uuid"
            }
          }
        },
        {"$ref": "#/definitions/personOrganisationDetails"}
      ]
    },
    "personOrganisationDetails": {
      "type": "object",
      "properties": {
        "firstName": {
          "description": "The person forename",
          "type": "string"
        },
        "middleName": {
          "description": "The person middle name",
          "type": "string"
        },
        "lastName": {
          "description": "The person last name",
          "type": "string"
        },
        "organisationName": {
          "description": "The organisation name",
          "type": "string"
        }
      }
    }
  }
}
