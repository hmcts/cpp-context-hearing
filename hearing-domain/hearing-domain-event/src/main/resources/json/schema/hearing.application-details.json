{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "http://justice.gov.uk/hearing/courts/hearing.application-details.json",
  "type": "object",
  "properties": {
    "applicationId": {
      "$ref": "http://justice.gov.uk/domain/core/common/definitions.json#/definitions/uuid"
    },
    "applicationReference": {
      "type": "string"
    },
    "subject": {
      "type": "object",
      "properties": {
        "defendantId": {
          "$ref": "http://justice.gov.uk/domain/core/common/definitions.json#/definitions/uuid"
        },
        "defendantFirstName": {
          "type": "string"
        },
        "defendantLastName": {
          "type": "string"
        },
        "defendantRemandStatus": {
          "type": "string"
        },
        "interpreterLanguageNeeds": {
          "type": "string"
        }
      }
    }
  }
}