{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "http://justice.gov.uk/hearing/courts/hearing.case-details.json",
  "type": "object",
  "properties": {
    "caseId": {
      "$ref": "http://justice.gov.uk/domain/core/common/definitions.json#/definitions/uuid"
    },
    "caseURN": {
      "type": "string"
    },
    "defendantDetails": {
      "type": "array",
      "minItems": 0,
      "items": {
        "defendantId": {
          "$ref": "http://justice.gov.uk/domain/core/common/definitions.json#/definitions/uuid"
        },
        "defendantFirstName": {
          "type": "string"
        },
        "defendantLastName": {
          "type": "string"
        },
        "defendantRemandStatus": {
          "type": "string"
        },
        "interpreterLanguageNeeds": {
          "type": "string"
        }
      }
    }
  }
}