    "offence": {
      "type": "object",
      "properties": {
        "id": {
          "$ref": "#/definitions/uuid"
        },
        "code": {
          "type": "string"
        },
        "convictionDate": {
          "type": "string"
        },
        "plea": {
          "$ref": "#/definitions/plea"
        },
        "verdict": {
          "$ref": "#/definitions/verdict"
        },
        "wording": {
          "type": "string"
        },
        "startDate": {
          "type": "string"
        },
        "endDate": {
          "type": "string"
        }
