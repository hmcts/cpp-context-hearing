        "address3": {
          "type": "string"
        },
        "address4": {
          "type": "string"
        },
        "postCode": {
          "type": "string"
        }
      },
      "additionalProperties": false,
      "required": [
        "address1",
        "address2",
        "address3",
        "address4",
        "postCode"
