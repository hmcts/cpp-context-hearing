      "type": "object",
      "properties": {
        "id": {
          "$ref": "#/definitions/uuid"
        },
        "courtCentre": {
          "$ref": "#/definitions/courtCentre"
        },
        "attendees": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/attendee"
          }
        },
        "defendants": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/defendant"
          }
        }
      },
      "additionalProperties": false,
      "required": [
        "id",
        "courtCentre",
        "attendees",
        "defendants"
      ]
    },
    "courtCentre": {
      "type": "object",
      "properties": {
        "courtCentreId": {
          "$ref": "#/definitions/uuid"
        },
        "courtCentreName": {
          "type": "string"
        },
        "courtRoomId": {
          "$ref": "#/definitions/uuid"
        },
        "courtRoomName": {
          "type": "string"
        }
      },
      "additionalProperties": false,
      "required": [
        "courtCentreId",
        "courtCentreName",
        "courtRoomId",
        "courtRoomName"
      ]
