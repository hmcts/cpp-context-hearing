        "type": {
          "type": "string"
        },
        "title": {
          "type": "string"
        }
      },
      "additionalProperties": false,
      "required": [
        "firstName",
        "lastName",
        "type",
        "title"
      ]
    },
    "defendant": {
      "type": "object",
      "properties": {
        "id": {
          "$ref": "#/definitions/uuid"
        },
        "person": {
          "$ref": "#/definitions/person"
        },
        "defenceOrganisation": {
          "type": "string"
        },
        "interpreter": {
          "type": "object",
          "properties": {
            "name": {
              "type": "string"
            },
            "language": {
              "type": "string"
            }
