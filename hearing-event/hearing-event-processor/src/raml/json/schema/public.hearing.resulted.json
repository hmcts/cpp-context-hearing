    "person": {
      "type": "object",
      "properties": {
        "id": {
          "$ref": "#/definitions/uuid"
        },
        "firstName": {
          "type": "string"
        },
        "lastName": {
          "type": "string"
        },
        "dateOfBirth": {
          "type": "string"
        },
        "address": {
          "$ref": "#/definitions/address"
        },
        "nationality": {
          "type": "string"
        },
        "gender": {
          "type": "string"
        },
        "homeTelephone": {
          "type": "string"
        },
        "workTelephone": {
          "type": "string"
        },
        "mobile": {
          "type": "string"
        },
        "fax": {
          "type": "string"
        },
        "email": {
          "type": "string"
        }
