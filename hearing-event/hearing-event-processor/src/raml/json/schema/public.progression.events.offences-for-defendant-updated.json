{
  "$schema":"http://json-schema.org/draft-04/schema#",
  "id":"http://justice.gov.uk/progression/courts/public.progression.events.offences-for-defendant-updated.json",
  "type":"object",
  "additionalProperties":false,
  "properties":{
    "modifiedDate":{
      "$ref":"http://justice.gov.uk/json/schemas/core/courtsDefinitions.json#/definitions/datePattern"
    },
    "updatedOffences":{
      "type":"array",
      "minItems": 1,
      "items":{
        "$ref":"#/definitions/defendantCaseOffences"
      }
    },
    "addedOffences":{
      "type":"array",
      "minItems": 1,
      "items":{
        "$ref":"#/definitions/defendantCaseOffences"
      }
    },
    "deletedOffences":{
      "type":"array",
      "minItems": 1,
      "items":{
        "$ref":"#/definitions/deletedDefendantCaseOffences"
      }
    }
  },
  "required":[
    "modifiedDate"
  ],
  "definitions":{
    "defendantCaseOffences":{
      "type":"object",
      "required":[
        "defendantId",
        "prosecutionCaseId",
        "offences"
      ],
      "properties":{
        "defendantId":{
          "$ref":"http://justice.gov.uk/json/schemas/core/courtsDefinitions.json#/definitions/uuid"
        },
        "prosecutionCaseId":{
          "$ref":"http://justice.gov.uk/json/schemas/core/courtsDefinitions.json#/definitions/uuid"
        },
        "offences":{
          "type":"array",
          "minItems": 1,
          "items":{
            "$ref":"http://justice.gov.uk/json/schemas/core/offence.json"
          }
        }
      },
      "additionalProperties":false
    },
    "deletedDefendantCaseOffences":{
      "type":"object",
      "required":[
        "defendantId",
        "prosecutionCaseId",
        "offences"
      ],
      "properties":{
        "defendantId":{
          "$ref":"http://justice.gov.uk/json/schemas/core/courtsDefinitions.json#/definitions/uuid"
        },
        "prosecutionCaseId":{
          "$ref":"http://justice.gov.uk/json/schemas/core/courtsDefinitions.json#/definitions/uuid"
        },
        "offences":{
          "type":"array",
          "minItems": 1,
          "items":{
            "$ref":"http://justice.gov.uk/json/schemas/core/courtsDefinitions.json#/definitions/uuid"
          }
        }
      },
      "additionalProperties":false
    }
  }
}