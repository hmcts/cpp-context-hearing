#%RAML 0.8
title: API Using media type in the URL
baseUri: message://event/processor/message/hearing

/hearing.event:
  post:
    body:

# Initiate Hearing
        application/vnd.hearing.events.initiated+json:
            schema: !include json/schema/hearing.events.initiated.json
            example: !include json/hearing.events.initiated.json
        application/vnd.hearing.events.hearing-initiate-ignored+json:
            schema: !include json/schema/hearing.events.hearing-initiate-ignored.json
            example: !include json/hearing.events.hearing-initiate-ignored.json

        application/vnd.hearing.command.register-hearing-against-offence+json:
            schema: !include json/schema/hearing.command.register-hearing-against-offence.json
            example: !include json/hearing.command.register-hearing-against-offence.json

        application/vnd.hearing.command.register-hearing-against-defendant+json:
            example: !include json/hearing.command.register-hearing-against-defendant.json
            schema: !include json/schema/hearing.command.register-hearing-against-defendant.json

        application/vnd.hearing.command.register-hearing-against-case+json:
            example: !include json/hearing.command.register-hearing-against-case.json
            schema: !include json/schema/hearing.command.register-hearing-against-case.json

# Inherit Plea after Initiate Hearing
        application/vnd.hearing.events.found-plea-for-hearing-to-inherit+json:
            schema: !include json/schema/hearing.events.found-plea-for-hearing-to-inherit.json
            example: !include json/hearing.events.found-plea-for-hearing-to-inherit.json

        application/vnd.hearing.command.update-hearing-with-inherited-plea+json:
            schema: !include json/schema/hearing.command.update-hearing-with-inherited-plea.json
            example: !include json/hearing.command.update-hearing-with-inherited-plea.json

# Inherit verdict after Initiate Hearing
        application/vnd.hearing.events.found-verdict-for-hearing-to-inherit+json:
            schema: !include json/schema/hearing.events.found-verdict-for-hearing-to-inherit.json
            example: !include json/hearing.events.found-verdict-for-hearing-to-inherit.json

        application/vnd.hearing.command.update-hearing-with-inherited-verdict+json:
            schema: !include json/schema/hearing.command.update-hearing-with-inherited-verdict.json
            example: !include json/hearing.command.update-hearing-with-inherited-verdict.json


# Sending Sheet Complete
        application/vnd.hearing.record-sending-sheet-complete+json:
            example: !include json/hearing.record-sending-sheet-complete.json
            schema:  !include json/schema/hearing.record-sending-sheet-complete.json

        application/vnd.hearing.sending-sheet-recorded+json:
            schema: !include json/schema/hearing.sending-sheet-recorded.json
            example: !include json/hearing.sending-sheet-recorded.json

        application/vnd.hearing.record-mags-court-hearing+json:
            schema: !include json/schema/hearing.record-mags-court-hearing.json
            example: !include json/hearing.record-mags-court-hearing.json

        application/vnd.hearing.mags-court-hearing-recorded+json:
            schema: !include json/schema/hearing.mags-court-hearing-recorded.json
            example: !include json/hearing.mags-court-hearing-recorded.json

# Log Event
        application/vnd.hearing.hearing-event-logged+json:
            schema: !include json/schema/hearing.hearing-event-logged.json
            example: !include json/hearing.hearing-event-logged.json

        application/vnd.hearing.hearing-event-ignored+json:
            schema: !include json/schema/hearing.hearing-event-ignored.json
            example: !include json/hearing.hearing-event-ignored.json
        application/vnd.hearing.hearing-events-updated+json:
            schema: !include json/schema/hearing.hearing-events-updated.json
            example: !include json/hearing.hearing-events-updated.json			

# Update Plea
        application/vnd.hearing.hearing-plea-updated+json:
            schema: !include json/schema/hearing.hearing-plea-updated.json
            example: !include json/hearing.hearing-plea-updated.json
        application/vnd.hearing.hearing-update-plea-ignored+json:
            schema: !include json/schema/hearing.hearing-update-plea-ignored.json
            example: !include json/hearing.hearing-update-plea-ignored.json

# Update Offence Aggregate with Plea
        application/vnd.hearing.hearing-offence-plea-updated+json:
            schema: !include json/schema/hearing.hearing-offence-plea-updated.json
            example: !include json/hearing.hearing-offence-plea-updated.json

#enrich Plea
        application/vnd.hearing.events.enrich-update-plea-with-associated-hearings+json:
            schema: !include json/schema/hearing.events.enrich-update-plea-with-associated-hearings.json
            example: !include json/hearing.events.enrich-update-plea-with-associated-hearings.json

#enrich Verdict
        application/vnd.hearing.events.enrich-update-verdict-with-associated-hearings+json:
            schema: !include json/schema/hearing.events.enrich-update-verdict-with-associated-hearings.json
            example: !include json/hearing.events.enrich-update-verdict-with-associated-hearings.json

