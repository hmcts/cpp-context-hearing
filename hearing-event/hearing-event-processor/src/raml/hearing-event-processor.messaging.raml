        application/vnd.hearing.conviction-date-removed+json:
            schema: !include json/schema/hearing.conviction-date-removed.json
            example: !include json/hearing.conviction-date-removed.json

# Share Results
        application/vnd.hearing.results-shared+json:
            schema: !include json/schema/hearing.results-shared.json
            example: !include json/hearing.results-shared.json

# Save Draft Results
        application/vnd.hearing.draft-result-saved+json:
            schema: !include json/schema/hearing.draft-result-saved.json
            example: !include json/hearing.draft-result-saved.json

        application/vnd.hearing.application-draft-resulted+json:
            schema: !include json/schema/hearing.application-draft-resulted.json
            example: !include json/hearing.application-draft-resulted.json

# Update Verdict
        application/vnd.hearing.hearing-offence-verdict-updated+json:
            schema: !include json/schema/hearing.hearing-offence-verdict-updated.json
            example: !include json/hearing.hearing-offence-verdict-updated.json

# Case Defendant Details Change
        application/vnd.hearing.update-case-defendant-details-enriched-with-hearing-ids+json:
            example: !include json/hearing.update-case-defendant-details-enriched-with-hearing-ids.json
            schema: !include json/schema/hearing.update-case-defendant-details-enriched-with-hearing-ids.json

        application/vnd.hearing.update-case-defendant-details-against-hearing-aggregate+json:
            example: !include json/hearing.update-case-defendant-details-against-hearing-aggregate.json
            schema: !include json/schema/hearing.update-case-defendant-details-against-hearing-aggregate.json

        application/vnd.hearing.update-case-defendant-details+json:
            schema: !include json/schema/hearing.update-case-defendant-details.json
            example: !include json/hearing.update-case-defendant-details.json

# Case Defendant Offences Change
        application/vnd.hearing.events.found-hearings-for-new-offence+json:
            example: !include json/hearing.events.found-hearings-for-new-offence.json
            schema: !include json/schema/hearing.events.found-hearings-for-new-offence.json

        application/vnd.hearing.command.add-new-offence-to-hearings+json:
            example: !include json/hearing.command.add-new-offence-to-hearings.json
            schema: !include json/schema/hearing.command.add-new-offence-to-hearings.json

        application/vnd.hearing.events.found-hearings-for-edit-offence+json:
            example: !include json/hearing.events.found-hearings-for-edit-offence.json
            schema: !include json/schema/hearing.events.found-hearings-for-edit-offence.json

        application/vnd.hearing.command.update-offence-on-hearings+json:
            example: !include json/hearing.command.update-offence-on-hearings.json
            schema: !include json/schema/hearing.command.update-offence-on-hearings.json

        application/vnd.hearing.events.found-hearings-for-delete-offence+json:
            example: !include json/hearing.events.found-hearings-for-delete-offence.json
            schema: !include json/schema/hearing.events.found-hearings-for-delete-offence.json

        application/vnd.hearing.command.delete-offence-on-hearings+json:
            example: !include json/hearing.command.delete-offence-on-hearings.json
            schema: !include json/schema/hearing.command.delete-offence-on-hearings.json

# Nows
        application/vnd.hearing.events.nows-material-status-updated+json:
            schema: !include json/schema/hearing.events.nows-material-status-updated.json
            example: !include json/hearing.events.nows-material-status-updated.json

        application/vnd.hearing.events.nows-requested+json:
            schema: !include json/schema/hearing.events.nows-requested.json
            example: !include json/hearing.events.nows-requested.json

        application/vnd.hearing.command.pending-nows-requested+json:
            schema: !include json/schema/hearing.command.pending-nows-requested.json
            example: !include json/hearing.command.pending-nows-requested.json

        application/vnd.hearing.events.pending-nows-requested+json:
             schema: !include json/schema/hearing.events.pending-nows-requested.json
             example: !include json/hearing.events.pending-nows-requested.json

# Attendees
        application/vnd.hearing.events.attendee-deleted+json:
            schema: !include json/schema/hearing.events.attendee-deleted.json
            example: !include json/hearing.events.attendee-deleted.json

# Hearing Detail Change
        application/vnd.hearing.change-hearing-detail+json:
                schema: !include json/schema/hearing.change-hearing-detail.json
                example: !include json/hearing.change-hearing-detail.json

# Hearing Adjourn
        application/vnd.hearing.event.hearing-adjourned+json:
                schema: !include json/schema/hearing.event.hearing-adjourned.json
                example: !include json/hearing.event.hearing-adjourned.json

# Update Defendant Attendance
        application/vnd.hearing.defendant-attendance-updated+json:
            schema: !include json/schema/hearing.defendant-attendance-updated.json
            example: !include json/hearing.defendant-attendance-updated.json

# application response
        application/vnd.hearing.application-response-saved+json:
            schema: !include json/schema/hearing.application-response-saved.json
            example: !include json/hearing.application-response-saved.json

# New Defendant added
        application/vnd.hearing.defendant-added+json:
                schema: !include json/schema/hearing.defendant-added.json
                example: !include json/hearing.defendant-added.json

