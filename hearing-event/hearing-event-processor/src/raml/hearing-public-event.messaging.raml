                      schema: !include json/schema/public.hearing.verdict-updated.json
                      example: !include json/public.hearing.verdict-updated.json
                  application/vnd.public.hearing.update-verdict-ignored+json:
                      schema: !include json/schema/public.hearing.update-verdict-ignored.json
                      example: !include json/public.hearing.update-verdict-ignored.json

# Witness-added
                  application/vnd.public.hearing.events.witness-added+json:
                      schema: !include json/schema/public.hearing.events.witness-added.json
                      example: !include json/public.hearing.events.witness-added.json
                      
