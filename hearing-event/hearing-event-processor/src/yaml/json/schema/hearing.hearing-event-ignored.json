{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "http://cpp.moj.gov.uk/hearing/json/schema/event/hearing-event-ignored.json",
  "type": "object",
  "properties": {
    "hearingEventId": {
      "$ref": "http://justice.gov.uk/core/courts/courtsDefinitions.json#/definitions/uuid"
    },
    "hearingEventDefinitionId": {
      "$ref": "http://justice.gov.uk/core/courts/courtsDefinitions.json#/definitions/uuid"
    },
    "recordedLabel": {
      "type": "string"
    },
    "hearingId": {
      "$ref": "http://justice.gov.uk/core/courts/courtsDefinitions.json#/definitions/uuid"
    },
    "eventTime": {
      "type": "string",
      "format": "date-time"
    },
    "reason": {
      "type": "string"
    },
    "alterable": {
      "type": "boolean"
    },
    "note": {
      "type": "string",
      "maxLength": 3000
    }
  },
  "required": [
    "hearingEventId",
    "hearingEventDefinitionId",
    "recordedLabel",
    "hearingId",
    "eventTime",
    "reason",
    "alterable"
  ],
  "additionalProperties": false
}