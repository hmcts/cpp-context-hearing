{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "http://cpp.moj.gov.uk/hearing/json/schema/event/hearing-event-logged.json",
  "type": "object",
  "properties": {
    "hearingEventId": {
      "$ref": "http://justice.gov.uk/core/courts/courtsDefinitions.json#/definitions/uuid"
    },
    "lastHearingEventId": {
      "$ref": "http://justice.gov.uk/core/courts/courtsDefinitions.json#/definitions/uuid"
    },
    "hearingId": {
      "$ref": "http://justice.gov.uk/core/courts/courtsDefinitions.json#/definitions/uuid"
    },
    "hearingEventDefinitionId": {
      "$ref": "http://justice.gov.uk/core/courts/courtsDefinitions.json#/definitions/uuid"
    },
    "defenceCounselId": {
      "$ref": "http://justice.gov.uk/core/courts/courtsDefinitions.json#/definitions/uuid"
    },
    "recordedLabel": {
      "type": "string"
    },
    "eventTime": {
      "type": "string",
      "format": "date-time"
    },
    "lastModifiedTime": {
      "type": "string",
      "format": "date-time"
    },
    "alterable": {
      "type": "boolean"
    },
    "courtCentre": {
      "$ref": "http://justice.gov.uk/core/courts/courtCentre.json"
    },
    "hearingType": {
      "$ref": "http://justice.gov.uk/core/courts/hearingType.json"
    },
    "caseURN": {
      "type": "string"
    },
    "jurisdictionType": {
      "$ref": "http://justice.gov.uk/core/courts/jurisdictionType.json"
    },
    "note": {
      "type": "string",
      "maxLength": 3000
    }
  },
  "required": [
    "hearingEventId",
    "hearingId",
    "hearingEventDefinitionId",
    "recordedLabel",
    "eventTime",
    "lastModifiedTime",
    "alterable",
    "courtCentre",
    "hearingType",
    "caseURN"
  ],
  "additionalProperties": false
}
