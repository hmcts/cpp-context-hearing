{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "http://cpp.moj.gov.uk/hearing/json/schema/event/hearing-events-updated.json",
  "type": "object",
  "properties": {
    "hearingId": {
      "$ref": "http://justice.gov.uk/core/courts/courtsDefinitions.json#/definitions/uuid"
    },
    "hearingEvents": {
      "type": "array",
      "minItems": 1,
      "items": {
        "$ref": "#/definitions/hearingEvent"
      }
    }
  },
  "definitions": {
    "hearingEvent": {
      "properties": {
        "hearingEventId": {
          "$ref": "http://justice.gov.uk/core/courts/courtsDefinitions.json#/definitions/uuid"
        },
        "recordedLabel": {
          "type": "string"
        }
      },
      "required": [
        "hearingEventId",
        "recordedLabel"
      ],
      "additionalProperties": false
    }
  },
  "required": [
    "hearingId",
    "hearingEvents"
  ],
  "additionalProperties": false
}