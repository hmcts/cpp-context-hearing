{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "http://justice.gov.uk/json/schemas/hearing/hearing.events.case-markers-enriched-with-associated-hearings.json",
  "type": "object",
  "properties": {
    "prosecutionCaseId": {
      "$ref": "http://justice.gov.uk/core/courts/courtsDefinitions.json#/definitions/uuid"
    },
    "hearingIds": {
      "type": "array",
      "minItems": 1,
      "items": {
        "$ref": "http://justice.gov.uk/core/courts/courtsDefinitions.json#/definitions/uuid"
      }
    },
    "caseMarkers": {
      "type": "array",
      "minItems": 0,
      "items": {
        "$ref": "http://justice.gov.uk/core/courts/marker.json"
      }
    }
  },
  "required": [
    "prosecutionCaseId",
    "hearingIds",
    "caseMarkers"
  ],
  "additionalProperties": false
}