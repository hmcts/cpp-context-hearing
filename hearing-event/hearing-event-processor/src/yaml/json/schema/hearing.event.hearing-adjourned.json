{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "http://cpp.moj.gov.uk/hearing/json/schema/event/hearing-adjourned.json",
  "type": "object",
  "properties": {
    "adjournedHearing": {
      "$ref": "http://justice.gov.uk/core/courts/courtsDefinitions.json#/definitions/uuid"
    },
    "nextHearings": {
      "type": "array",
      "minItems": 1,
      "items": {
        "$ref": "http://justice.gov.uk/core/courts/nextHearing.json"
      }
    }
  },
  "required": [
    "nextHearings", "adjournedHearing"
  ],
  "additionalProperties": false
}