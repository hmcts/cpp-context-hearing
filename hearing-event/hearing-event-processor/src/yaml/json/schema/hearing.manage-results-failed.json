{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "http://cpp.moj.gov.uk/hearing/json/schema/event/manage-results-failed.json",
  "type": "object",
  "properties": {
    "hearingId": {
      "$ref": "http://justice.gov.uk/core/courts/courtsDefinitions.json#/definitions/uuid"
    },
    "hearingState": {
      "description": "The state of the hearing",
      "enum": [
        "INITIALISED",
        "SHARED",
        "SHARED_AMEND_LOCKED_ADMIN_ERROR",
        "SHARED_AMEND_LOCKED_USER_ERROR",
        "VALIDATED",
        "APPROVAL_REQUESTED"
      ]
    },
    "resultsError": {
      "$ref": "#/definitions/resultsError"
    },
    "hearingDay": {
      "$ref": "http://justice.gov.uk/core/courts/courtsDefinitions.json#/definitions/datePattern"
    },
    "userId": {
      "$ref": "http://justice.gov.uk/core/courts/courtsDefinitions.json#/definitions/uuid"
    },
    "version": {
      "type": "integer"
    },
    "lastUpdatedByUserId": {
      "$ref": "http://justice.gov.uk/core/courts/courtsDefinitions.json#/definitions/uuid"
    },
    "lastUpdatedVersion": {
      "type": "integer"
    }
  },
  "required": [
    "hearingId",
    "hearingState",
    "resultsError",
    "hearingDay",
    "userId"
  ],
  "additionalProperties": false,
  "definitions": {
    "resultsError": {
      "properties": {
        "type": {
          "enum": [
            "STATE",
            "VERSION"
          ]
        },
        "code": {
          "type": "string"
        },
        "reason": {
          "type": "string"
        }
      }
    }
  }
}