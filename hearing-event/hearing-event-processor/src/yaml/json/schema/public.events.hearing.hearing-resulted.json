{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "http://cpp.moj.gov.uk/hearing/json/schema/event/public.events.hearing.hearing-resulted.json",
  "type": "object",
  "properties": {
    "hearing": {
      "$ref": "http://justice.gov.uk/core/courts/hearing.json#"
    },
    "isReshare": {
      "type": "boolean"
    },
    "sharedTime": {
      "format": "date-time"
    },
    "shadowListedOffences": {
      "type": "array",
      "additionalItems": false,
      "items": {
        "$ref": "http://justice.gov.uk/domain/core/common/definitions.json#/definitions/uuid"
      }
    },
    "hearingDay": {
      "$ref": "http://justice.gov.uk/core/courts/courtsDefinitions.json#/definitions/datePattern"
    }
  },
  "required": [
    "isReshare",
    "hearing",
    "sharedTime",
    "hearingDay"
  ],
  "additionalProperties": true
}
