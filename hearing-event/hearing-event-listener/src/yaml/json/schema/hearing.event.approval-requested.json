{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "http://cpp.moj.gov.uk/hearing/json/schema/event/hearing.request-approval.json",
  "type": "object",
  "properties": {
    "hearingId": {
      "$ref": "http://justice.gov.uk/core/courts/courtsDefinitions.json#/definitions/uuid"
    },
    "userId": {
      "$ref": "http://justice.gov.uk/core/courts/courtsDefinitions.json#/definitions/uuid"
    },
    "requestApprovalTime": {
      "description": "The request approval date and time ",
      "type": "string",
      "format": "date-time"
    },
    "approvalType": {
      "description": "When draft result is saved, it is CHANGE and when request for approval is made it is APPROVAL",
      "type": "string",
      "enum": [
        "CHANGE",
        "APPROVAL"
      ]
    }
  },
  "required": [
    "hearingId",
    "userId",
    "requestApprovalTime",
    "approvalType"
  ],
  "additionalProperties": false
}