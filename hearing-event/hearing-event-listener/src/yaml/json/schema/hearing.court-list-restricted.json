{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "http://justice.gov.uk/hearing/json/schema/event/court-list-restricted.json",
  "type": "object",
  "properties": {
    "hearingId": {
      "$ref": "http://justice.gov.uk/core/courts/courtsDefinitions.json#/definitions/uuid"
    },
    "caseIds": {
      "type": "array",
      "minItems": 1,
      "items": {
        "$ref": "http://justice.gov.uk/core/courts/courtsDefinitions.json#/definitions/uuid"
      }
    },
    "defendantIds": {
      "type": "array",
      "minItems": 1,
      "items": {
        "$ref": "http://justice.gov.uk/core/courts/courtsDefinitions.json#/definitions/uuid"
      }
    },
    "offenceIds": {
      "type": "array",
      "minItems": 1,
      "items": {
        "$ref": "http://justice.gov.uk/core/courts/courtsDefinitions.json#/definitions/uuid"
      }
    },
    "courtApplicationApplicantIds": {
      "type": "array",
      "minItems": 1,
      "items": {
        "$ref": "http://justice.gov.uk/core/courts/courtsDefinitions.json#/definitions/uuid"
      }
    },
    "courtApplicationRespondentIds": {
      "type": "array",
      "minItems": 1,
      "items": {
        "$ref": "http://justice.gov.uk/core/courts/courtsDefinitions.json#/definitions/uuid"
      }
    },
    "courtApplicationIds": {
      "type": "array",
      "minItems": 1,
      "items": {
        "$ref": "http://justice.gov.uk/core/courts/courtsDefinitions.json#/definitions/uuid"
      }
    },
    "courtApplicationType": {
      "type": "string"
    },
    "restrictCourtList": {
      "type": "boolean"
    }
  },
  "anyOf": [
    {
      "required": [
        "caseIds"
      ]
    },
    {
      "required": [
        "defendantIds"
      ]
    },
    {
      "required": [
        "offenceIds"
      ]
    },
    {
      "required": [
        "courtApplicationIds"
      ]
    },
    {
      "required": [
        "courtApplicationApplicantIds"
      ]
    },
    {
      "required": [
        "courtApplicationRespondentIds"
      ]
    },
    {
      "required": [
        "courtApplicationIds",
        "courtApplicationType"
      ]
    }
  ],
  "required": [
    "hearingId",
    "restrictCourtList"
  ]
}