{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "http://cpp.moj.gov.uk/hearing/json/schema/event/session-time-recorded.json",
  "definitions": {
    "courtSessionJudiciary": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "judiciaryId": {
          "$ref": "http://justice.gov.uk/core/courts/courtsDefinitions.json#/definitions/uuid"
        },
        "judiciaryName": {
          "type": "string"
        },
        "benchChairman": {
          "type": "boolean"
        }
      },
      "anyOf": [
        {
          "required": [
            "judiciaryId"
          ]
        },
        {
          "required": [
            "judiciaryName"
          ]
        },
        {
          "required": [
            "benchChairman"
          ]
        }
      ]
    },
    "courtSession": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "startTime": {
          "type": "string"
        },
        "endTime": {
          "type": "string"
        },
        "courtClerkId": {
          "$ref": "http://justice.gov.uk/core/courts/courtsDefinitions.json#/definitions/uuid"
        },
        "courtAssociateId": {
          "$ref": "http://justice.gov.uk/core/courts/courtsDefinitions.json#/definitions/uuid"
        },
        "legalAdviserId": {
          "$ref": "http://justice.gov.uk/core/courts/courtsDefinitions.json#/definitions/uuid"
        },
        "judiciaries": {
          "type": "array",
          "minItems": 1,
          "items": {
            "$ref": "#/definitions/courtSessionJudiciary"
          }
        }
      },
      "anyOf": [
        {
          "required": [
            "startTime"
          ]
        },
        {
          "required": [
            "endTime"
          ]
        },
        {
          "required": [
            "courtClerkId"
          ]
        },
        {
          "required": [
            "courtAssociateId"
          ]
        },
        {
          "required": [
            "judiciaries"
          ]
        },
        {
          "required": [
            "legalAdviserId"
          ]
        }
      ]
    }
  },
  "properties": {
    "courtSessionId": {
      "$ref": "http://justice.gov.uk/core/courts/courtsDefinitions.json#/definitions/uuid"
    },
    "courtHouseId": {
      "$ref": "http://justice.gov.uk/core/courts/courtsDefinitions.json#/definitions/uuid"
    },
    "courtRoomId": {
      "$ref": "http://justice.gov.uk/core/courts/courtsDefinitions.json#/definitions/uuid"
    },
    "courtSessionDate": {
      "$ref": "http://justice.gov.uk/core/courts/courtsDefinitions.json#/definitions/datePattern"
    },
    "amCourtSession": {
      "$ref": "#/definitions/courtSession"
    },
    "pmCourtSession": {
      "$ref": "#/definitions/courtSession"
    }
  },
  "anyOf": [
    {
      "required": [
        "courtSessionId",
        "courtHouseId",
        "courtRoomId",
        "courtSessionDate",
        "amCourtSession"
      ]
    },
    {
      "required": [
        "courtSessionId",
        "courtHouseId",
        "courtRoomId",
        "courtSessionDate",
        "pmCourtSession"
      ]
    },
    {
      "required": [
        "courtSessionId",
        "courtHouseId",
        "courtRoomId",
        "courtSessionDate",
        "amCourtSession",
        "pmCourtSession"
      ]
    }
  ],
  "additionalProperties": false
}
