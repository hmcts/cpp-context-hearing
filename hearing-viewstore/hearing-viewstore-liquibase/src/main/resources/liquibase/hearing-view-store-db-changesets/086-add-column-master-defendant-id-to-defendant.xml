<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                                       http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.3.xsd">

    <changeSet id="86" author="hearing" logicalFilePath="086-add-column-master-defendant-id-to-defendant.xml">

        <addColumn tableName="ha_defendant">
            <column name="master_defendant_id" type="UUID">
                <constraints nullable="true"/>
            </column>
        </addColumn>

        <update tableName="ha_defendant">
            <column name="master_defendant_id" type="UUID" valueComputed="id"/>
        </update>

        <addNotNullConstraint
                columnName="master_defendant_id"
                tableName="ha_defendant"/>

    </changeSet>

</databaseChangeLog>