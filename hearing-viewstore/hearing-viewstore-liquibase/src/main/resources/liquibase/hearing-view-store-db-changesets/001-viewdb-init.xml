<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <changeSet author="CCR" id="1" logicalFilePath="001-viewdb-init.xml">
        <createTable tableName="hearing">
            <column name="hearingid" type="UUID">
                <constraints nullable="false"/>
            </column>
            <column name="caseid" type="UUID"/>
            <column name="hearingtype" type="VARCHAR(255)"/>
            <column name="startdate" type="date"/>
            <column name="duration" type="INT">
                <constraints nullable="false"/>
            </column>
            <column name="courtcentrename" type="VARCHAR(255)"/>
            <column name="status" type="VARCHAR(255)"/>
        </createTable>
    </changeSet>

    <changeSet author="CCR" id="2" logicalFilePath="001-viewdb-init.xml">
        <addPrimaryKey columnNames="hearingid" constraintName="hearing_pkey"
                       tableName="hearing"/>
    </changeSet>

</databaseChangeLog>
