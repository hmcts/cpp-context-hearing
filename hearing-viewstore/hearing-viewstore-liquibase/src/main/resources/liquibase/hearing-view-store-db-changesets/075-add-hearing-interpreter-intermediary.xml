<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                                       http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.3.xsd">

    <changeSet id="75" author="hearing" logicalFilePath="075-add-interpreter-intermediary">

        <createTable tableName="ha_hearing_interpreter_intermediary">
            <column name="id" type="UUID"/>
            <column name="hearing_id" type="UUID"/>
            <column name="deleted" type="boolean"/>
            <column name="payload" type="jsonb"/>
        </createTable>

        <addPrimaryKey columnNames="id, hearing_id" constraintName="pk_ha_hearing_interpreter_intermediary"
                       tableName="ha_hearing_interpreter_intermediary"/>

        <addForeignKeyConstraint baseColumnNames="hearing_id"
                                 baseTableName="ha_hearing_interpreter_intermediary"
                                 constraintName="fk_hearing_interpreter_intermediary_id" deferrable="false"
                                 initiallyDeferred="false"
                                 onDelete="NO ACTION" onUpdate="NO ACTION"
                                 referencedColumnNames="id"
                                 referencedTableName="ha_hearing"/>

    </changeSet>

</databaseChangeLog>