<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                                       http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.3.xsd">

    <changeSet id="54" author="hearing" logicalFilePath="054_add_date_time_to_hearing_day.xml">

        <addColumn tableName="ha_hearing_day">
            <column name="date_time" type="DATETIME"/>
        </addColumn>

        <modifyDataType tableName="ha_hearing_day" newDataType="DATE" columnName="date"/>

        <createIndex tableName="ha_hearing_day" indexName="hearing_day_idx">
            <column name="date"/>
        </createIndex>

    </changeSet>

</databaseChangeLog>