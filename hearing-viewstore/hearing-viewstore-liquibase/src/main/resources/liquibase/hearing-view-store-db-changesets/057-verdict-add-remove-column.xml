<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                                       http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.3.xsd">

    <changeSet id="57" author="hearing" logicalFilePath="057-verdict-add-remove-column">

        <addColumn tableName="ha_offence">
            <column name="verdict_originating_hearing_id" type="UUID">
                <constraints nullable="true"/>
            </column>
        </addColumn>

        <addColumn tableName="ha_offence">
            <column name="verdict_sequence" type="INT">
                <constraints nullable="true"/>
            </column>
        </addColumn>

        <addColumn tableName="ha_offence">
            <column name="verdict_description" type="TEXT">
                <constraints nullable="true"/>
            </column>
        </addColumn>

        <addColumn tableName="ha_offence">
            <column name="lesser_offence_title_welsh" type="TEXT">
                <constraints nullable="true"/>
            </column>
        </addColumn>

        <addColumn tableName="ha_offence">
            <column name="lesser_offence_legislation_welsh" type="TEXT">
                <constraints nullable="true"/>
            </column>
        </addColumn>

    </changeSet>

</databaseChangeLog>