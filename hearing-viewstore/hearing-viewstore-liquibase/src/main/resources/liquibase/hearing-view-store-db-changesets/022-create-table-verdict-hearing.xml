<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <changeSet id="22" author="CCR" logicalFilePath="022-create-table-verdict-hearing.xml">
        <createTable tableName="verdict_hearing">
            <column name="verdict_id" type="uuid">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="hearing_id" type="uuid"/>
            <column name="case_id" type="uuid"/>
            <column name="defendant_id" type="uuid"/>
            <column name="offence_id" type="uuid"/>
            <column name="person_id" type="uuid"/>
            <column name="value" type="VARCHAR(255)"/>
        </createTable>

        <createIndex tableName="verdict_hearing" indexName="verdict_hearing_case_id_idx">
            <column name="case_id"/>
        </createIndex>

    </changeSet>
</databaseChangeLog>