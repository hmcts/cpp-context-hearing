<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                                       http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.3.xsd">

    <changeSet id="46" author="hearing" logicalFilePath="046-create-judicial_role.xml">

        <createTable tableName="ha_judicial_role">
            <column name="id" type="UUID">
                <constraints nullable="false"/>
            </column>
            <column name="judicial_id" type="UUID">
                <constraints nullable="false"/>
            </column>
            <column name="hearing_id" type="UUID">
                <constraints nullable="false"/>
            </column>
            <column name="first_name" type="TEXT">
                <constraints nullable="true"/>
            </column>
            <column name="middle_name" type="TEXT">
                <constraints nullable="true"/>
            </column>
            <column name="last_name" type="TEXT">
                <constraints nullable="true"/>
            </column>
            <column name="title" type="TEXT">
                <constraints nullable="true"/>
            </column>
            <column name="is_bench_chairman" type="boolean">
                <constraints nullable="false"/>
            </column>
            <column name="is_deputy" type="boolean">
                <constraints nullable="false"/>
            </column>
            <column name="judicial_role_type" type="TEXT">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addPrimaryKey columnNames="id" constraintName="judicial_role_pkey"
                       tableName="ha_judicial_role"/>


        <addForeignKeyConstraint baseColumnNames="hearing_id" baseTableName="ha_judicial_role"
                                 constraintName="fk_judicial_role_hearing"
                                 referencedColumnNames="id"
                                 referencedTableName="ha_hearing"/>


    </changeSet>

</databaseChangeLog>