<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <changeSet id="1" author="CCR" logicalFilePath="006-add-hearing-defence-counsel.xml">
        <createTable tableName="hearing_defence_counsel">
            <column name="id" type="UUID">
                <constraints primaryKey="true" nullable="false" />
            </column>
            <column name="hearing_id" type="UUID"></column>
            <column name="person_id" type="UUID"></column>
            <column name="status" type="VARCHAR(255)"></column>
        </createTable>

        <createIndex tableName="hearing_defence_counsel" indexName="defence_counsel_hearing_idx">
            <column name="hearing_id"/>
        </createIndex>

        <createTable tableName="hearing_defence_counsel_defendant">
            <column name="defence_counsel_attendee_id" type="UUID"></column>
            <column name="defendant_id" type="UUID"></column>
        </createTable>
    </changeSet>

</databaseChangeLog>
