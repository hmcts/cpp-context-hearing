<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                                       http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.3.xsd">

    <changeSet id="43" author="CCR" logicalFilePath="043_alter_key_for_now_result.xml">

        <dropTable cascadeConstraints="true" tableName="nows_result"/>

        <createTable tableName="ha_nows_result">
            <column name="id" type="UUID">
                <constraints nullable="false"/>
            </column>
            <column name="shared_result_id" type="UUID">
                <constraints nullable="false"/>
            </column>
            <column name="nows_material_id" type="UUID">
                <constraints nullable="false"/>
            </column>
            <column name="sequence" type="INT"/>
        </createTable>

        <addPrimaryKey columnNames="id" constraintName="nows_result_pkey"
                       tableName="ha_nows_result"/>

        <addForeignKeyConstraint baseColumnNames="nows_material_id" baseTableName="ha_nows_result"
                                 constraintName="fk_nows_result_nows_material" deferrable="false"
                                 initiallyDeferred="false"
                                 onDelete="NO ACTION" onUpdate="NO ACTION"
                                 referencedColumnNames="id"
                                 referencedTableName="ha_nows_material"/>

    </changeSet>
</databaseChangeLog>