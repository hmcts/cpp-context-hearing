<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                                       http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.3.xsd">

    <changeSet id="67" author="hearing" logicalFilePath="067-create-application-draft-result.xml">

        <createTable tableName="application_draft_result">
            <column name="id" type="UUID">
                <constraints nullable="false"/>
            </column>
            <column name="hearing_id" type="UUID">
                <constraints nullable="false"/>
            </column>
            <column name="application_id" type="UUID">
                <constraints nullable="false"/>
            </column>
            <column name="draft_result" type="TEXT">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addPrimaryKey columnNames="id" constraintName="application_draft_result_pkey"
                       tableName="application_draft_result"/>

        <addForeignKeyConstraint baseColumnNames="hearing_id" baseTableName="application_draft_result"
                                 constraintName="fk_application_draft_result_hearing" referencedColumnNames="id"
                                 referencedTableName="ha_hearing"/>

    </changeSet>

</databaseChangeLog>