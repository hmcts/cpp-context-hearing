<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                                       http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.3.xsd">

    <changeSet id="68" author="hearing" logicalFilePath="068-ethnicity-changes.xml">

        <renameColumn tableName="ha_associated_person" oldColumnName="ethnicity_id"
                      newColumnName="self_defined_ethnicity_id"/>
        <renameColumn tableName="ha_associated_person" oldColumnName="ethnicity"
                      newColumnName="self_defined_ethnicity_code"/>
        <addColumn tableName="ha_associated_person">
            <column name="observed_ethnicity_id" type="UUID"/>
            <column name="observed_ethnicity_code" type="TEXT"/>
            <column name="observed_ethnicity_description" type="TEXT"/>
            <column name="self_defined_ethnicity_description" type="TEXT"/>
        </addColumn>
        <addColumn tableName="ha_defendant">
            <column name="observed_ethnicity_description" type="TEXT"/>
            <column name="self_defined_ethnicity_description" type="TEXT"/>
        </addColumn>
    </changeSet>

</databaseChangeLog>