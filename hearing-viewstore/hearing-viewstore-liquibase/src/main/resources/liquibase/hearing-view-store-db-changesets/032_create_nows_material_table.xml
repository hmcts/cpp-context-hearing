<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                                       http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.3.xsd">

    <changeSet id="32" author="I2T" logicalFilePath="032_create_nows_material_table.xml">


        <createTable tableName="nows_material">
            <column name="id" type="UUID">
                <constraints nullable="false"/>
            </column>
            <column name="hearing_id" type="UUID"/>
            <column name="defendant_id" type="UUID"/>
            <column name="status" type="TEXT"/>
        </createTable>
        <createTable tableName="nows_material_usersgroups">
            <column name="material_id" type="UUID">
                <constraints nullable="false"/>
            </column>
            <column name="user_groups" type="TEXT">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addPrimaryKey columnNames="id" constraintName="nows_material_pkey"
                       tableName="nows_material"/>

        <addForeignKeyConstraint baseColumnNames="material_id"
                                 baseTableName="nows_material_usersgroups"
                                 constraintName="fk_user_group_nows_material" deferrable="false"
                                 initiallyDeferred="false"
                                 onDelete="NO ACTION" onUpdate="NO ACTION"
                                 referencedColumnNames="id"
                                 referencedTableName="nows_material"/>


    </changeSet>

</databaseChangeLog>


