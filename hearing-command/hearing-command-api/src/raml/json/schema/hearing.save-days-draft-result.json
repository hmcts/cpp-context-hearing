{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "http://justice.gov.uk/json/schemas/hearing/hearing.save-days-draft-result.json",
  "type": "object",
  "properties": {
    "hearingId": {
      "$ref": "http://justice.gov.uk/core/courts/courtsDefinitions.json#/definitions/uuid"
    },
    "resultLines": {
      "type": "array",
      "items": {
        "$ref": "http://justice.gov.uk/core/courts/resultLine.json"
      }
    },
    "reasonsList": {
      "type": "array",
      "items": {
