{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "http://justice.gov.uk/json/schemas/hearing/hearing.book-provisional-hearing-slots.json",
  "type": "object",
  "properties": {
    "slots": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "properties": {
          "courtScheduleId": {
            "$ref": "http://justice.gov.uk/core/courts/courtsDefinitions.json#/definitions/uuid"
          },
          "hearingStartTime": {
            "description": "The hearing date and time to store which exact hearing start time is selected for count based slots",
            "type": "string",
            "format": "date-time"
          }
        },
        "required": [
          "courtScheduleId",
          "hearingStartTime"
        ]
      }
    },
    "bookingType": {
      "type": "string"
    },
    "priority": {
      "type": "string"
    },
    "specialRequirements": {
      "description": "Special requirements on hearings/cases",
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "string"
      }
    }
  },
  "required": [
    "slots"
  ],
  "additionalProperties": false
}
