{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "http://justice.gov.uk/json/schemas/hearing/hearing.amend.json",
  "type": "object",
  "properties": {
    "hearingId": {
      "$ref": "http://justice.gov.uk/core/courts/courtsDefinitions.json#/definitions/uuid"
    },
    "newHearingState": {
      "description": "The state of the hearing",
      "enum": [
        "SHARED_AMEND_LOCKED_ADMIN_ERROR",
        "SHARED_AMEND_LOCKED_USER_ERROR"
      ]
    }
  },
  "required": [
    "hearingId",
    "newHearingState"
  ]
}