{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "http://justice.gov.uk/json/schemas/hearing/hearing.command.update-resultline-sharing-dates.json",
  "type": "object",
  "properties": {
    "hearingId": {
      "$ref": "http://justice.gov.uk/core/courts/courtsDefinitions.json#/definitions/uuid"
    },
    "resultLinesToBeUpdated": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "properties": {
          "resultLineId": {
            "$ref": "http://justice.gov.uk/core/courts/courtsDefinitions.json#/definitions/uuid"
          },
          "sharedDate": {
            "$ref": "http://justice.gov.uk/core/courts/courtsDefinitions.json#/definitions/datePattern"
          }
        }
      }
    }
  },
  "required": [
    "hearingId",
    "resultLinesToBeUpdated"
  ],
  "additionalProperties": false
}