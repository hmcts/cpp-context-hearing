{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "http://justice.gov.uk/json/schemas/hearing/hearing.command.update-verdict.json",
  "type": "object",
  "properties": {
    "hearingId": {
      "type": "string"
    },
    "verdicts": {
      "type": "array",
      "items": [
        {
          "type": "object",
          "properties": {
            "offenceId": {
              "type": "string"
            },
            "verdictType": {
              "type": "object",
              "properties": {
                "id": {
                  "type": "string"
                },
                "category": {
                  "type": "string"
                },
                "categoryType": {
                  "type": "string"
                }
              },
              "required": [
                "id",
                "category",
                "categoryType"
              ]
            },
            "verdictDate": {
              "type": "string"
            },
            "lesserOffence": {
              "type": "object",
              "properties": {
                "offenceDefinitionId": {
                  "type": "string"
                },
                "offenceCode": {
                  "type": "string"
                },
                "title": {
                  "type": "string"
                },
                "legislation": {
                  "type": "string"
                }
              },
              "required": [
                "offenceDefinitionId",
                "offenceCode",
                "title",
                "legislation"
              ]
            },
            "jurors": {
              "type": "object",
              "properties": {
                "numberOfJurors": {
                  "type": "integer"
                },
                "numberOfSplitJurors": {
                  "type": "integer"
                },
                "unanimous": {
                  "type": "boolean"
                }
              },
              "required": [
                "numberOfJurors",
                "numberOfSplitJurors",
                "unanimous"
              ]
            }
          },
          "required": [
            "offenceId",
            "verdictType",
            "verdictDate",
            "lesserOffence",
            "jurors"
          ]
        }
      ]
    }
  },
  "required": [
    "hearingId",
    "verdicts"
  ]
}