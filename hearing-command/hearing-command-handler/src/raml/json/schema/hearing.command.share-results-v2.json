{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "http://justice.gov.uk/hearing/courts/hearing.command.share-results-v2.json",
  "type": "object",
  "properties": {
    "hearingId": {
      "$ref": "http://justice.gov.uk/domain/core/common/definitions.json#/definitions/uuid"
    },
    "courtClerk": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "userId": {
          "description": "The identifier of teh court clerk sharing the results",
          "$ref": "http://justice.gov.uk/core/courts/courtsDefinitions.json#/definitions/uuid"
        },
        "firstName": {
          "type": "string"
        },
        "lastName": {
          "type": "string"
        }
      },
      "required": [
        "userId",
        "firstName",
        "lastName"
      ]
    },
    "resultLines": {
      "type": "array",
      "minItems": 1,
      "items": {
        "$ref": "#/definitions/resultLine"
      }
    },
    "hearingDay": {
      "$ref": "http://justice.gov.uk/core/courts/courtsDefinitions.json#/definitions/datePattern"
    }
  },
  "required": [
    "hearingId",
    "courtClerk",
    "resultLines",
    "hearingDay"
  ],
  "definitions": {
    "resultLine": {
      "type": "object",
      "properties": {
        "delegatedPowers": {
          "$ref": "http://justice.gov.uk/core/courts/delegatedPowers.json"
        },
        "orderedDate": {
          "$ref": "http://justice.gov.uk/core/courts/courtsDefinitions.json#/definitions/datePattern"
        },
        "sharedDate": {
          "$ref": "http://justice.gov.uk/core/courts/courtsDefinitions.json#/definitions/datePattern"
        },
        "resultLineId": {
          "$ref": "http://justice.gov.uk/core/courts/courtsDefinitions.json#/definitions/uuid"
        },
        "targetId": {
          "$ref": "http://justice.gov.uk/core/courts/courtsDefinitions.json#/definitions/uuid"
        },
        "offenceId": {
          "$ref": "http://justice.gov.uk/core/courts/courtsDefinitions.json#/definitions/uuid"
        },
        "defendantId": {
          "$ref": "http://justice.gov.uk/core/courts/courtsDefinitions.json#/definitions/uuid"
        },
        "resultDefinitionId": {
          "description": "Available when the UI has resolved the result with the notepad parsing service i.e. is expected when result line isComplete is true",
          "$ref": "http://justice.gov.uk/core/courts/courtsDefinitions.json#/definitions/uuid"
        },
        "level": {
          "description": "Available when the UI has resolved the result with the notepad parsing service i.e. is expected when result line isComplete is true",
          "type": "string",
          "enum": [
            "DEFENDANT",
            "CASE",
            "OFFENCE"
          ]
        },
        "resultLabel": {
          "description": "Available when the UI has resolved the result with the notepad parsing service i.e. is expected when result line isComplete is true",
          "type": "string"
        },
        "prompts": {
          "description": "Available when the UI has resolved the result with the notepad parsing service i.e. is expected when result line isComplete is true",
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "id": {
                "$ref": "http://justice.gov.uk/domain/core/common/definitions.json#/definitions/uuid"
              },
              "promptRef" : {
                "type": "string"
              },
              "label": {
                "type": "string"
              },
              "fixedListCode": {
                "type": "string"
              },
              "value": {
                "type": "string"
              },
              "welshValue": {
                "type": "string"
              },
              "welshLabel": {
                "type": "string"
              }
            },
            "required": [
              "id",
              "label",
              "value",
              "welshValue"
            ],
            "additionalProperties": false
          }
        },
        "isModified": {
          "type": "boolean"
        },
        "isComplete": {
          "type": "boolean"
        },
        "amendmentDate": {
          "type": "string",
          "format": "date-time"
        },
        "childResultLineIds": {
          "type": "array",
          "items": {
            "$ref": "http://justice.gov.uk/core/courts/courtsDefinitions.json#/definitions/uuid"
          }
        },
        "parentResultLineIds": {
          "type": "array",
          "items": {
            "$ref": "http://justice.gov.uk/core/courts/courtsDefinitions.json#/definitions/uuid"
          }
        }
      },
      "required": [
        "orderedDate",
        "resultLineId",
        "isModified",
        "isComplete"
      ]
    }
  }
}
