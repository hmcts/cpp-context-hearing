{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "http://justice.gov.uk/json/schemas/hearing/hearing.validate-result-amendments.json",
  "type": "object",
  "properties": {
    "id": {
      "$ref": "http://justice.gov.uk/core/courts/courtsDefinitions.json#/definitions/uuid"
    },
    "validateAction": {
      "description": "Validate or Reject amendments",
      "type": "string",
      "enum": [
        "APPROVE",
        "REJECT"
      ]
    },
    "hearingDay": {
      "$ref": "http://justice.gov.uk/core/courts/courtsDefinitions.json#/definitions/datePattern"
    }
  },
  "required": [
    "id",
    "validateAction"
  ],
  "additionalProperties": true
}