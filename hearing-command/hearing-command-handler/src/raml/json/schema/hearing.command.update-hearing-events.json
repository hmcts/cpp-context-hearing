{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "id": "http://justice.gov.uk/json/schemas/hearing/hearing.command.update-hearing-events.json",
  "properties": {
    "hearingId": {
      "$ref": "http://justice.gov.uk/core/courts/courtsDefinitions.json#/definitions/uuid"
    },
    "hearingEvents": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "properties": {
          "hearingEventId": {
            "$ref": "http://justice.gov.uk/core/courts/courtsDefinitions.json#/definitions/uuid"
          },
          "recordedLabel": {
            "type": "string"
          },
          "note": {
            "type": "string",
            "maxLength": 3000
          }
        },
        "required": [
          "hearingEventId",
          "recordedLabel"
        ],
        "additionalProperties": false
      }
    }
  },
  "required": [
    "hearingEvents"
  ],
  "additionalProperties": false
}