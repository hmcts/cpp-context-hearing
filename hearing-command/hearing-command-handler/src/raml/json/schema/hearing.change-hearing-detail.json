{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "http://justice.gov.uk/json/schemas/hearing/hearing.change-hearing-detail.json",
  "type": "object",
  "properties": {
    "hearing": {
      "type": "object",
      "items": {
        "$ref": "#/definitions/hearing"
      }
    }
  },
  "required": [
    "hearing"
  ],
  "definitions": {
    "hearing": {
      "type": "object",
      "properties": {
        "id": {
          "$ref": "http://justice.gov.uk/json/schemas/core/courtsDefinitions.json#/definitions/uuid"
        },
        "type": {
          "$ref": "http://justice.gov.uk/json/schemas/core/hearingType.json"
        },
        "jurisdictionType": {
          "$ref": "http://justice.gov.uk/json/schemas/core/courtsDefinitions.json#/definitions/jurisdictionType"
        },
        "reportingRestrictionReason": {
          "type": "string"
        },
        "hearingLanguage": {
          "$ref": "http://justice.gov.uk/json/schemas/core/courtsDefinitions.json#/definitions/hearingLanguage"
        },
        "hearingDays": {
          "type": "array",
          "minItems": 1,
          "items": {
            "$ref": "http://justice.gov.uk/json/schemas/core/hearingDay.json"
          }
        },
        "courtCentre": {
          "$ref": "http://justice.gov.uk/json/schemas/core/courtCentre.json"
        },
        "judiciary": {
          "type": "array",
          "minItems": 1,
          "items": {
            "$ref": "http://justice.gov.uk/json/schemas/core/judicialRole.json"
          }
        }
      },
      "required": [
        "id",
        "type",
        "jurisdictionType",
        "courtCentre",
        "hearingLanguage",
        "hearingDays"
      ],
      "additionalProperties": false
    }
  }
}
