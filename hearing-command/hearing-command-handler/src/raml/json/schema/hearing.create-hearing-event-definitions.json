{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "http://justice.gov.uk/json/schemas/hearing/hearing.create-hearing-event-definitions.json",
  "type": "object",
  "properties": {
    "id": {
      "$ref": "http://justice.gov.uk/core/courts/courtsDefinitions.json#/definitions/uuid"
    },
    "eventDefinitions": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": {
            "$ref": "http://justice.gov.uk/core/courts/courtsDefinitions.json#/definitions/uuid"
          },
          "groupLabel": {
            "type": "string"
          },
          "actionLabel": {
            "type": "string"
          },
          "actionSequence": {
            "type": "integer"
          },
          "groupSequence": {
            "type": "integer"
          },
          "recordedLabel": {
            "type": "string"
          },
          "caseAttribute": {
            "type": "string"
          },
          "alterable": {
            "type": "boolean"
          }
        },
        "required": [
          "id",
          "recordedLabel",
          "actionLabel",
          "actionSequence",
          "groupSequence",
          "groupLabel",
          "alterable"
        ],
        "additionalProperties": false
      }
    }
  },
  "required": [
    "id",
    "eventDefinitions"
  ],
  "additionalProperties": false
}