{
  "$schema":"http://json-schema.org/draft-04/schema#",
  "id": "http://justice.gov.uk/json/schemas/hearing/hearing.create-hearing-event-definitions.json",
  "type":"object",
  "properties":{
    "id":{
      "$ref": "http://justice.gov.uk/json/schemas/core/courtsDefinitions.json#/definitions/uuid"
    },
    "eventDefinitions":{
      "type":"array",
      "items":{
        "type":"object",
        "properties":{
          "id":{
            "$ref": "http://justice.gov.uk/json/schemas/core/courtsDefinitions.json#/definitions/uuid"
          },
          "groupLabel":{
            "type":"string"
          },
          "actionLabel":{
            "type":"string"
          },
          "actionLabelExtension":{
            "type":"string"
          },
          "recordedLabel":{
            "type":"string"
          },
          "sequence":{
            "type":"integer"
          },
          "sequenceType":{
            "type":"string"
          },
          "caseAttribute":{
            "type":"string"
          },
          "alterable":{
            "type":"boolean"
          }
        },
        "required":[
          "id",
          "recordedLabel",
          "actionLabel",
          "alterable"
        ],
        "additionalProperties":false
      }
    }
  },
  "required":[
    "id",
    "eventDefinitions"
  ],
  "additionalProperties":false
}