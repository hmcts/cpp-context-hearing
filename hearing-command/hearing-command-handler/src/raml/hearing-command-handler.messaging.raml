        application/vnd.hearing.record-sending-sheet-complete+json:
            example: !include json/hearing.record-sending-sheet-complete.json
            schema:  !include json/schema/hearing.record-sending-sheet-complete.json

        application/vnd.hearing.record-mags-court-hearing+json:
            example: !include json/hearing.record-mags-court-hearing.json
            schema:  !include json/schema/hearing.record-mags-court-hearing.json

# Nows

        application/vnd.hearing.command.save-nows-variants+json:
            example: !include json/hearing.command.save-nows-variants.json
            schema:  !include json/schema/hearing.command.save-nows-variants.json

        application/vnd.hearing.command.pending-nows-requested+json:
                schema: !include json/schema/hearing.command.pending-nows-requested.json
                example: !include json/hearing.command.pending-nows-requested.json
