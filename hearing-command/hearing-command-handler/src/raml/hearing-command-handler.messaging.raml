        application/vnd.hearing.command.upload-subscriptions+json:
                schema: !include json/schema/hearing.command.upload-subscriptions.json
                example: !include json/hearing.command.upload-subscriptions.json

# Apply Enforcement Acknowledgement
        application/vnd.hearing.command.apply-enforcement-acknowledgement+json:
                schema: !include json/schema/hearing.command.apply-enforcement-acknowledgement.json
                example: !include json/hearing.command.apply-enforcement-acknowledgement.json

#Enforcement Acknowledgement Error
        application/vnd.hearing.command.enforcement-acknowledgement-error+json:
                schema: !include json/schema/hearing.command.enforcement-acknowledgement-error.json
                example: !include json/hearing.command.enforcement-acknowledgement-error.json