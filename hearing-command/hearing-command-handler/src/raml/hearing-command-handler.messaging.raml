#%RAML 0.8
title: Hearing Command handler
baseUri:  message://command/handler/message/hearing

/hearing.handler.command:
  post:
      body:
# Initiate Hearing
        application/vnd.hearing.initiate+json:
            example: !include json/hearing.initiate.json
            schema:  !include json/schema/hearing.initiate.json

        application/vnd.hearing.command.lookup-plea-on-offence-for-hearing+json:
            schema: !include json/schema/hearing.command.lookup-plea-on-offence-for-hearing.json
            example: !include json/hearing.command.lookup-plea-on-offence-for-hearing.json

        application/vnd.hearing.command.update-hearing-with-inherited-plea+json:
            schema: !include json/schema/hearing.command.update-hearing-with-inherited-plea.json
            example: !include json/hearing.command.update-hearing-with-inherited-plea.json

        application/vnd.hearing.command.lookup-witnesses-on-defendant-for-hearing+json:
            schema: !include json/schema/hearing.command.lookup-witnesses-on-defendant-for-hearing.json
            example: !include json/hearing.command.lookup-witnesses-on-defendant-for-hearing.json

        application/vnd.hearing.command.register-hearing-against-defendant+json:
            schema: !include json/schema/hearing.command.register-hearing-against-defendant.json
            example: !include json/hearing.command.register-hearing-against-defendant.json

        application/vnd.hearing.command.register-hearing-against-case+json:
            schema: !include json/schema/hearing.command.register-hearing-against-case.json
            example: !include json/hearing.command.register-hearing-against-case.json

# Log Event
        application/vnd.hearing.command.log-hearing-event+json:
            example: !include json/hearing.command.log-hearing-event.json
            schema: !include json/schema/hearing.command.log-hearing-event.json
        application/vnd.hearing.command.update-hearing-events+json:
            example: !include json/hearing.command.update-hearing-events.json
            schema: !include json/schema/hearing.command.update-hearing-events.json			

        application/vnd.hearing.create-hearing-event-definitions+json:
            example: !include json/hearing.create-hearing-event-definitions.json
            schema:  !include json/schema/hearing.create-hearing-event-definitions.json

        application/vnd.hearing.command.correct-hearing-event+json:
            example: !include json/hearing.command.correct-hearing-event.json
            schema: !include json/schema/hearing.command.correct-hearing-event.json

# Add Prosecution Counsel
        application/vnd.hearing.add-prosecution-counsel+json:
            example: !include json/hearing.add-prosecution-counsel.json
            schema:  !include json/schema/hearing.add-prosecution-counsel.json

# Add Defence Counsel
        application/vnd.hearing.add-defence-counsel+json:
            example: !include json/hearing.add-defence-counsel.json
            schema:  !include json/schema/hearing.add-defence-counsel.json

# Results
        application/vnd.hearing.save-draft-result+json:
            example: !include json/hearing.save-draft-result.json
            schema: !include json/schema/hearing.save-draft-result.json

        application/vnd.hearing.command.share-results+json:
            example: !include json/hearing.command.share-results.json
            schema:  !include json/schema/hearing.command.share-results.json

        application/vnd.hearing.command.update-result-lines-status+json:
            example: !include json/hearing.command.update-result-lines-status.json
            schema:  !include json/schema/hearing.command.update-result-lines-status.json

#Update Plea
        application/vnd.hearing.hearing-offence-plea-update+json:
            example: !include json/hearing.hearing-offence-plea-update.json
            schema:  !include json/schema/hearing.hearing-offence-plea-update.json

        application/vnd.hearing.offence-plea-updated+json:
            schema: !include json/schema/hearing.offence-plea-updated.json
            example: !include json/hearing.offence-plea-updated.json

# Update Verdict
        application/vnd.hearing.command.update-verdict+json:
            example: !include json/hearing.command.update-verdict.json
