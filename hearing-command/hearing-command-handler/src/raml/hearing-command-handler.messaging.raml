        application/vnd.hearing.command.add-update-witness+json:
            example: !include json/hearing.command.add-update-witness.json
            schema:  !include json/schema/hearing.command.add-update-witness.json
        application/vnd.hearing.defence-witness-added+json:
            schema: !include json/schema/hearing.defence-witness-added.json
            example: !include json/hearing.defence-witness-added.json

