#%RAML 0.8
title: Hearing Command handler
baseUri:  message://command/handler/message/hearing

/hearing.handler.command:
  post:
      body:
# Initiate Hearing
        application/vnd.hearing.initiate+json:
            example: !include json/hearing.initiate.json
            schema:  !include json/schema/hearing.initiate.json

        application/vnd.hearing.command.register-hearing-against-offence+json:
            schema: !include json/schema/hearing.command.register-hearing-against-offence.json
            example: !include json/hearing.command.register-hearing-against-offence.json

        application/vnd.hearing.command.update-hearing-with-inherited-plea+json:
            schema: !include json/schema/hearing.command.update-hearing-with-inherited-plea.json
            example: !include json/hearing.command.update-hearing-with-inherited-plea.json

        application/vnd.hearing.command.update-hearing-with-inherited-verdict+json:
            schema: !include json/schema/hearing.command.update-hearing-with-inherited-verdict.json
            example: !include json/hearing.command.update-hearing-with-inherited-verdict.json

        application/vnd.hearing.command.register-hearing-against-defendant+json:
            schema: !include json/schema/hearing.command.register-hearing-against-defendant.json
            example: !include json/hearing.command.register-hearing-against-defendant.json

        application/vnd.hearing.command.register-hearing-against-case+json:
            schema: !include json/schema/hearing.command.register-hearing-against-case.json
            example: !include json/hearing.command.register-hearing-against-case.json

# Log Event
        application/vnd.hearing.command.log-hearing-event+json:
            example: !include json/hearing.command.log-hearing-event.json
            schema: !include json/schema/hearing.command.log-hearing-event.json
        application/vnd.hearing.command.update-hearing-events+json:
            example: !include json/hearing.command.update-hearing-events.json
            schema: !include json/schema/hearing.command.update-hearing-events.json			

        application/vnd.hearing.create-hearing-event-definitions+json:
            example: !include json/hearing.create-hearing-event-definitions.json
            schema:  !include json/schema/hearing.create-hearing-event-definitions.json

        application/vnd.hearing.command.correct-hearing-event+json:
            example: !include json/hearing.command.correct-hearing-event.json
            schema: !include json/schema/hearing.command.correct-hearing-event.json

# Prosecution Counsel
        application/vnd.hearing.command.add-prosecution-counsel+json:
            example: !include json/hearing.command.add-prosecution-counsel.json
            schema:  !include json/schema/hearing.command.add-prosecution-counsel.json
        application/vnd.hearing.command.remove-prosecution-counsel+json:
