<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

	<parent>
		<groupId>uk.gov.moj.cpp.common</groupId>
		<artifactId>service-parent-pom</artifactId>
		<version>3.0.30</version>
	</parent>

	<groupId>uk.gov.moj.cpp.hearing</groupId>
	<artifactId>hearing-parent</artifactId>
	<version>2.0.82</version>
	<packaging>pom</packaging>

    <name>Hearing Context - Parent Module</name>
    <description>A applications for hearing service.</description>
    <properties>
        <sonar.jacoco.itReportPath>${project.basedir}/../target/jacoco-it.exec</sonar.jacoco.itReportPath>
        <sonar.report.export.path>sonar-report.json</sonar.report.export.path>
        <sonar.scm.provider>git</sonar.scm.provider>
        <mvn.site.url>file://${project.build.directory}/site</mvn.site.url>
        <authorisation.service.version>0.1.19</authorisation.service.version>
    </properties>
    <modules>
        <module>hearing-query</module>
        <module>hearing-viewstore</module>
        <module>hearing-command</module>
        <module>hearing-domain</module>
        <module>hearing-event</module>
        <module>hearing-integration-test</module>
        <module>hearing-performance-test</module>
        <module>hearing-notepad-parsing-service</module>
    </modules>
    <build>
        <pluginManagement>
            <plugins>
                <plugin>
                    <groupId>external.atlassian.jgitflow</groupId>
                    <artifactId>jgitflow-maven-plugin</artifactId>
                </plugin>
            </plugins>
        </pluginManagement>

        <plugins>
            <plugin>
                <groupId>external.atlassian.jgitflow</groupId>
                <artifactId>jgitflow-maven-plugin</artifactId>
                <configuration>
                    <flowInitContext>
                        <masterBranchName>dev/hearing-release</masterBranchName>
                        <developBranchName>master</developBranchName>
                        <featureBranchPrefix>dev/hearing-feature-</featureBranchPrefix>
                        <releaseBranchPrefix>dev/hearing-release-</releaseBranchPrefix>
                        <hotfixBranchPrefix>dev/hearing-hotfix-</hotfixBranchPrefix>
                        <versionTagPrefix>hearing-tag-</versionTagPrefix>
                    </flowInitContext>
                    <autoVersionSubmodules>true</autoVersionSubmodules>
                    <enableSshAgent>true</enableSshAgent>
                    <pushReleases>true</pushReleases>
                </configuration>
            </plugin>
        </plugins>
    </build>
    <distributionManagement>
        <site>
            <id>site</id>
            <url>${mvn.site.url}</url>
        </site>
    </distributionManagement>
</project>